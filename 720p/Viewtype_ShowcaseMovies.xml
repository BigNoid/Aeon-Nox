	<include name="Showcase">
		<control type="group">
			<visible>Control.IsVisible(501)</visible>
			<control type="group">
				<include>ShowcaseMovies</include>
			</control>
			<include condition="!Skin.HasSetting(showcasewrap)">scmfixed</include>
			<include condition="Skin.HasSetting(showcasewrap)">scmwrap</include>
			<control type="scrollbar" id="61">
				<animation effect="fade" start="100" end="0" time="0" condition="Control.HasFocus(501)|ControlGroup(9000).HasFocus|Control.HasFocus(7001)|Control.HasFocus(7000)|Control.HasFocus(109)">Conditional</animation>
        <ondown condition="Skin.HasSetting(FullScreenFanart)">SetFocus(109)</ondown>
        <ondown condition="!Skin.HasSetting(FullScreenFanart)+[Container.Content(tvshows)|Container.Content(seasons)]">Skin.ToggleSetting(noflowtv)</ondown>
        <ondown condition="!Skin.HasSetting(FullScreenFanart)+![Container.Content(tvshows)|Container.Content(seasons)]">Skin.ToggleSetting(noflow)</ondown>
				<onup>501</onup>
			</control>
			<control type="group">
				<visible>!Control.HasFocus(109)+!Control.HasFocus(61)</visible>
				<include>Animation_HideMultiplex</include>
				<include>SecondLabelFloor</include>
				<include>FirstLabelFloor</include>
			</control>
		</control>
	</include>
