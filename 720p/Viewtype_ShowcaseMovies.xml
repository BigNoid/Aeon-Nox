    <posx>-671</posx>
    <posy>380</posy>
    <width>1960</width>
    <height>350</height>
		<onleft>501</onleft>
		<onright>501</onright>
		<onup>SetFocus(7000)</onup>
		<ondown>61</ondown>
		<viewtype label="31028">bigwrap</viewtype>
		<pagecontrol>61</pagecontrol>
