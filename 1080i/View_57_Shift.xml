<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="ShiftPosterThumbs">
        <control type="image">
			<posx>-12</posx>
			<posy>130</posy>
			<width>340</width>
			<height>490</height>
			<aspectratio scalediffuse="false">scale</aspectratio>
            <texture background="true">$VAR[PosterThumbVar]</texture>
			<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
			<bordersize>20</bordersize>
		</control>
        <control type="image">
            <posx>8</posx>
            <posy>601</posy>
            <width>300</width>
            <height>450</height>
            <aspectratio aligny="top" scalediffuse="false">scale</aspectratio>
            <texture background="true" flipy="true" diffuse="thumbs/thumb_diffuse.png">$VAR[PosterThumbVar]</texture>
            <animation effect="fade" start="100" end="30" time="160">Focus</animation>
            <animation effect="fade" start="30" end="100" time="160">UnFocus</animation>
        </control>
		<control type="image">
			<posx>200</posx>
			<posy>149</posy>
			<width>100</width>
			<height>100</height>
			<texture>$VAR[OverlayVar]</texture>
			<aspectratio align="center" aligny="top">keep</aspectratio>
			<bordersize>1</bordersize>
		</control>
		<control type="group">
			<posx>30</posx>
			<posy>170</posy>
			<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
		</control>
	</include>

	<include name="ShiftSquareThumbs">
		<control type="image">
			<posx>-12</posx>
			<posy>280</posy>
			<width>340</width>
			<height>340</height>
			<aspectratio scalediffuse="false">scale</aspectratio>
			<texture background="true">$INFO[ListItem.Icon]</texture>
			<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
			<bordersize>20</bordersize>
		</control>
		<control type="image">
			<posx>8</posx>
			<posy>600</posy>
			<width>300</width>
			<height>300</height>
			<aspectratio aligny="top" scalediffuse="false">scale</aspectratio>
			<texture background="true" flipy="true" diffuse="thumbs/thumb_diffuse.png">$INFO[ListItem.Icon]</texture>
			<animation effect="fade" start="100" end="30" time="160">Focus</animation>
			<animation effect="fade" start="30" end="100" time="160">UnFocus</animation>
		</control>
		<control type="image">
			<posx>200</posx>
			<posy>149</posy>
			<width>100</width>
			<height>100</height>
			<texture>$VAR[OverlayVar]</texture>
			<aspectratio align="center" aligny="top">keep</aspectratio>
			<bordersize>1</bordersize>
		</control>
	</include>

	<include name="PosterShift">
        <control type="group">
			<include>ViewAnimation</include>
			<visible>Control.IsVisible(57) + !Window.IsActive(addoninformation)</visible>
            <control type="fixedlist" id="57">
                <posx>-120</posx>
                <posy>300</posy>
                <width>2100</width>
                <height>750</height>
				<onup>SetProperty(MediaMenu,True,home)</onup>
				<onup>SetFocus(9050)</onup>
				<onleft>57</onleft>
                <onright>57</onright>
				<ondown>61</ondown>
                <orientation>horizontal</orientation>
                <viewtype label="31079">BigWrap</viewtype>
                <pagecontrol>61</pagecontrol>
				<preloaditems>2</preloaditems>
				<scrolltime tween="quadratic">200</scrolltime>
                <focusposition>1</focusposition>
				<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(musicvideos) | Container.Content(seasons) | Container.Content(genres) | Container.Content(sets) | Container.Content(addons)</visible>
				<itemlayout width="315" height="750" condition="!Container.Content(addons)">
					<include>ShiftPosterThumbs</include>
				</itemlayout>
                <focusedlayout width="315" height="750" condition="!Container.Content(addons)">
					<control type="group">
						<animation effect="zoom" center="auto" start="100" end="130" time="160" tween="quadratic">Focus</animation>
						<animation effect="zoom" center="auto" start="130" end="100" time="160" tween="quadratic">Unfocus</animation>
						<include>ShiftPosterThumbs</include>
					</control>
                </focusedlayout>
				<itemlayout width="315" height="750" condition="Container.Content(addons)">
					<include>ShiftSquareThumbs</include>
				</itemlayout>
				<focusedlayout width="315" height="750" condition="Container.Content(addons)">
					<control type="group">
						<animation effect="zoom" center="150,450" start="100" end="130" time="160" tween="quadratic">Focus</animation>
						<animation effect="zoom" center="150,450" start="130" end="100" time="160" tween="quadratic">Unfocus</animation>
						<include>ShiftSquareThumbs</include>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="61">
				<posx>0</posx>
				<posy>970</posy>
				<width>1920</width>
				<height>12</height>
				<onup>57</onup>
				<ondown>noop</ondown>
				<texturesliderbackground border="1">-</texturesliderbackground>
				<texturesliderbar border="6,0,6,0">scrollbar/texturesliderbar_hor.png</texturesliderbar>
				<texturesliderbarfocus border="6,0,6,0">scrollbar/texturesliderbarfocus_hor.png</texturesliderbarfocus>
				<textureslidernib>-</textureslidernib>
				<textureslidernibfocus>-</textureslidernibfocus>
				<showonepage>false</showonepage>
				<orientation>horizontal</orientation>
				<animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(61) + !Container.Scrolling">Conditional</animation>
			</control>
		</control>
    </include>

	<include name="AlbumShift">
		<control type="group">
			<include>ViewAnimation</include>
			<visible>Control.IsVisible(57) + !Window.IsActive(addoninformation)</visible>
			<control type="fixedlist" id="57">
				<posx>-120</posx>
				<posy>300</posy>
				<width>2100</width>
				<height>750</height>
				<onup>SetProperty(MediaMenu,True,home)</onup>
				<onup>SetFocus(9050)</onup>
				<onleft>57</onleft>
				<onright>57</onright>
				<ondown>61</ondown>
				<orientation>horizontal</orientation>
				<viewtype label="31079">BigWrap</viewtype>
				<pagecontrol>61</pagecontrol>
				<scrolltime tween="quadratic">200</scrolltime>
				<focusposition>1</focusposition>
				<visible>Container.Content(addons) | Container.Content(songs) | Container.Content(artists) | Container.Content(albums) | Container.Content(genres)</visible>
				<itemlayout width="315" height="750">
					<include>ShiftSquareThumbs</include>
				</itemlayout>
				<focusedlayout width="315" height="750">
					<control type="image">
						<posx>-35</posx>
						<posy>340</posy>
						<width>390</width>
						<height>400</height>
						<aspectratio>keep</aspectratio>
						<texture background="true">$INFO[ListItem.Art(discart)]</texture>
						<animation effect="slide" delay="1600" end="0,-260" time="320" tween="quadratic">Focus</animation>
						<animation effect="slide" start="0,-260" end="0" time="160" tween="quadratic" easing="in">Unfocus</animation>
						<animation effect="zoom" start="100" end="70" center="auto" time="160" condition="!Control.HasFocus(57)">Conditional</animation>
						<visible>!IsEmpty(ListItem.Art(discart))</visible>
						<bordersize>7</bordersize>
					</control>
					<control type="group">
						<animation effect="zoom" center="150,450" start="100" end="130" time="160" tween="quadratic">Focus</animation>
						<animation effect="zoom" center="150,450" start="130" end="100" time="160" tween="quadratic">Unfocus</animation>
						<include>ShiftSquareThumbs</include>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="61">
				<posx>0</posx>
				<posy>970</posy>
				<width>1920</width>
				<height>12</height>
				<onup>57</onup>
				<ondown>noop</ondown>
				<texturesliderbackground border="1">-</texturesliderbackground>
				<texturesliderbar border="6,0,6,0">scrollbar/texturesliderbar_hor.png</texturesliderbar>
				<texturesliderbarfocus border="6,0,6,0">scrollbar/texturesliderbarfocus_hor.png</texturesliderbarfocus>
				<textureslidernib>-</textureslidernib>
				<textureslidernibfocus>-</textureslidernibfocus>
				<showonepage>false</showonepage>
				<orientation>horizontal</orientation>
				<animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(61) + !Container.Scrolling">Conditional</animation>
			</control>
		</control>
	</include>

</includes>