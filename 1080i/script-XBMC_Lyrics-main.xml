					<control type="label">
						<posx>630</posx>
						<posy>0</posy>
						<width>630</width>
						<height>60</height>
						<font>font14</font>
						<textoffsetx>15</textoffsetx>
						<textcolor>grey</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>right</align>
