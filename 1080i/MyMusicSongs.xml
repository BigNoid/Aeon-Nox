<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<views>50,55,500,501</views>
	<onload>SetProperty(Window.HasSettings,True,home)</onload>
	<onload>ClearProperty(MediaMenu,Home)</onload>
	<onunload>ClearProperty(Window.HasSettings,Home)</onunload>
	<controls>
		<include>CommonBackground</include>
		<control type="group">
			<include>Window_OpenClose_Animation</include>
			<include condition="!Skin.HasSetting(Enable.SlimList)">MusicList</include>
			<include condition="Skin.HasSetting(Enable.SlimList)">SlimList</include>
			<!-- view id = 50 -->
			<include>MusicTriPanel</include>
			<!-- view id = 55 -->
			<include>MusicWall</include>
			<!-- view id = 500 -->
			<include>MusicLowList</include>
			<!-- view id = 501 -->
		</control>
		<control type="group">
			<visible>Control.IsVisible(500)</visible>
			<visible>!Window.IsActive(addoninformation)</visible>
			<animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">VisibleChange</animation>
			<animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">WindowOpen</animation>
			<animation effect="slide" tween="cubic" time="720" end="0,806" start="0,0">WindowClose</animation>
			<top>-30</top>
			<control type="group">
				<visible>Control.IsVisible(500)</visible>
				<animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">VisibleChange</animation>
				<control type="group">
					<left>90</left>
					<top>1010</top>
					<control type="label">
						<left>0</left>
						<top>0</top>
						<width>1150</width>
						<height>42</height>
						<aligny>top</aligny>
						<align>left</align>
						<font>font16_title_bold</font>
						<textcolor>white</textcolor>
						<scroll>true</scroll>
						<label>$INFO[ListItem.Label]</label>
						<textoffsety>-2</textoffsety>
						<textoffsetx>30</textoffsetx>
					</control>
					<control type="label">
						<left>0</left>
						<top>45</top>
						<width>1100</width>
						<height>30</height>
						<align>left</align>
						<font>font13_title</font>
						<textcolor>white</textcolor>
						<label>$INFO[ListItem.Label2]</label>
						<textoffsetx>30</textoffsetx>
					</control>
				</control>
				<control type="grouplist">
					<left>0</left>
					<top>1000</top>
					<width>1840</width>
					<height>90</height>
					<align>right</align>
					<aligny>center</aligny>
					<itemgap>0</itemgap>
					<orientation>horizontal</orientation>
					<visible>!ListItem.IsFolder + !Container.Content(addons)</visible>
					<animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">VisibleChange</animation>
					<control type="image">
						<width>198</width>
						<include>MediaFlagVars</include>
						<texture>$INFO[ListItem.FileExtension,flags/audio/,.png]</texture>
					</control>
					<control type="image">
						<width>198</width>
						<include>MediaFlagVars</include>
						<texture fallback="rating0.png">$INFO[ListItem.StarRating]</texture>
					</control>
					<control type="label">
						<width>198</width>
						<height>90</height>
						<align>center</align>
						<label fallback="• • • •">$INFO[ListItem.Year]</label>
						<font>font35_title_bold</font>
						<textcolor>white</textcolor>
						<wrapmultiline>true</wrapmultiline>
					</control>
				</control>
			</control>
			<control type="image">
				<left>0</left>
				<top>970</top>
				<width>FullScreenWidth</width>
				<height>140</height>
				<texture border="1">gradient_floor.png</texture>
			</control>
		</control>
		<include>ScrollOffsetLabel</include>
		<include>Topbar</include>
		<control type="group">
			<left>-440</left>
			<include>SideBladeLeft</include>
			<control type="grouplist" id="9050">
				<include>MediaMenuTop</include>
				<control type="radiobutton" id="99">
					<description>Library button</description>
					<label>$LOCALIZE[29800]</label>
					<onclick>ReplaceWindow(MusicLibrary)</onclick>
					<selected>Window.IsVisible(MusicLibrary)</selected>
					<include>ButtonCommonValues</include>
					<enable>Library.HasContent(Music)</enable>
				</control>
				<control type="edit" id="19">
					<visible>Container.CanFilter + !Container.CanFilterAdvanced</visible>
					<description>Filter</description>
					<textwidth>345</textwidth>
					<include>ButtonCommonValues</include>
					<label>587</label>
				</control>
				<control type="radiobutton" id="20">
					<visible>Container.CanFilterAdvanced</visible>
					<description>Filter</description>
					<include>ButtonCommonValues</include>
					<label>587</label>
					<selected>Container.Filtered</selected>
					<onclick>right</onclick>
					<onclick>Filter</onclick>
				</control>
				<control type="button" id="203">
					<description>Actions</description>
					<textwidth>352</textwidth>
					<font>font13_title</font>
					<include>ButtonCommonValues</include>
					<label>31039</label>
					<enable>no</enable>
					<disabledcolor>themecolor</disabledcolor>
				</control>
				<control type="button" id="612">
					<description>Go to playlist</description>
					<include>ButtonCommonValues</include>
					<label>13350</label>
					<onclick>ActivateWindow(musicplaylist)</onclick>
					<visible>!StringCompare(Playlist.Length(music),0)</visible>
				</control>
			</control>
		</control>
	</controls>
</window>