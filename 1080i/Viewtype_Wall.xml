                    <animation effect="slide" start="-150" end="0" delay="640" time="320" tween="cubic">WindowOpen</animation>
                </control>
                <control type="image">
                    <posx>1804</posx>
                    <posy>150</posy>
                    <width>30</width>
                    <height>786</height>
                    <texture flipx="true">wall/wall_arrow.png</texture>
                    <colordiffuse>$VAR[TitleColorVar]</colordiffuse>
