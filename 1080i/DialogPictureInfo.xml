<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="true">5</defaultcontrol>
    <onload>SetFocus(5)</onload>
    <animation type="WindowOpen" reversible="false">
        <effect type="zoom" start="150" end="100" center="960,540" time="400" tween="cubic" />
        <effect type="fade" end="100" time="200" />
    </animation>
    <animation type="WindowClose" reversible="false">
        <effect type="fade" start="100" end="0" time="240" />
        <effect type="zoom" start="100" end="130" center="960,540" time="240" tween="cubic" easing="in" />
    </animation>
    <controls>
        <control type="image">
            <aspectratio>scale</aspectratio>
            <texture background="true">common/black.png</texture>
            <include>FullscreenDimensions</include>
        </control>
        <control type="image">
            <texture background="true">$INFO[ListItem.FilenameAndPath]</texture>
            <include>CommonFanartVarsSingle</include>
        </control>
        <control type="group">
            <animation effect="slide" start="0" end="0,540" time="0" reversible="false" condition="!IntegerGreaterThan(Container(5).NumItems,4)">Conditional</animation>
            <animation effect="slide" start="0" end="0,180" time="0" reversible="false" condition="IntegerGreaterThan(Container(5).NumItems,4) + !IntegerGreaterThan(Container(5).NumItems,12)">Conditional</animation>
            <control type="image">
                <posy>204</posy>
                <width>1923</width>
                <height>980</height>
                <texture>home/nowplaying_shadow.png</texture>
            </control>
            <control type="image">
                <posy>204</posy>
                <width>1923</width>
                <height>980</height>
                <texture>home/nowplaying_shadow.png</texture>
                <colordiffuse>grey2</colordiffuse>
            </control>
            <control type="panel" id="5">
                <posy>660</posy>
                <width>1920</width>
                <height>420</height>
                <aligny>bottom</aligny>
                <onleft>5000</onleft>
                <onright>61</onright>
                <onup>5</onup>
                <ondown>5</ondown>
                <pagecontrol>61</pagecontrol>
                <scrolltime tween="quadratic">300</scrolltime>
                <orientation>vertical</orientation>
                <itemlayout height="60" width="640">
                    <control type="image">
                        <width>640</width>
                        <height>60</height>
                        <texture border="1">osd/osd_settings_buttonnf.png</texture>
                    </control>
                    <control type="label">
                        <posx>10</posx>
                        <width>640</width>
                        <height>60</height>
                        <textoffsetx>15</textoffsetx>
                        <label>$INFO[ListItem.Label]</label>
                        <font>Font_Reg30_2</font>
                        <shadowcolor>black</shadowcolor>
                        <textcolor>grey2</textcolor>
                    </control>
                    <control type="label">
                        <posx>640</posx>
                        <width>750</width>
                        <height>60</height>
                        <textoffsetx>15</textoffsetx>
                        <align>right</align>
                        <label>$INFO[ListItem.Label2]</label>
                        <font>Font_Reg30_2</font>
                        <shadowcolor>black</shadowcolor>
                    </control>
                </itemlayout>
                <focusedlayout height="60" width="640">
                    <control type="group">
                        <visible>!Control.HasFocus(5)</visible>
                        <control type="image">
                            <width>640</width>
                            <height>60</height>
                            <texture border="1">osd/osd_settings_buttonnf.png</texture>
                        </control>
                        <control type="label">
                            <posx>10</posx>
                            <width>640</width>
                            <height>60</height>
                            <textoffsetx>15</textoffsetx>
                            <label>$INFO[ListItem.Label]</label>
                            <font>Font_Reg30_2</font>
                            <shadowcolor>black</shadowcolor>
                            <textcolor>grey2</textcolor>
                        </control>
                        <control type="label">
                            <posx>640</posx>
                            <width>640</width>
                            <height>60</height>
                            <textoffsetx>15</textoffsetx>
                            <align>right</align>
                            <label>$INFO[ListItem.Label2]</label>
                            <font>Font_Reg30_2</font>
                            <shadowcolor>black</shadowcolor>
                        </control>
                    </control>
                    <control type="group">
                        <visible>Control.HasFocus(5)</visible>
                        <control type="image">
                            <width>640</width>
                            <height>60</height>
                            <texture border="8">views/tripanel/listselect_fo.png</texture>
                            <colordiffuse>$VAR[FocusTextureColorVar]</colordiffuse>
                        </control>
                        <control type="label">
                            <posx>10</posx>
                            <width>640</width>
                            <height>60</height>
                            <textoffsetx>15</textoffsetx>
                            <label>$INFO[ListItem.Label]</label>
                            <font>Font_Reg30_2</font>
                            <shadowcolor>black</shadowcolor>
                        </control>
                        <control type="label">
                            <posx>640</posx>
                            <width>640</width>
                            <height>60</height>
                            <textoffsetx>15</textoffsetx>
                            <align>right</align>
                            <label>$INFO[ListItem.Label2]</label>
                            <font>Font_Reg30_2</font>
                            <shadowcolor>black</shadowcolor>
                        </control>
                    </control>
                </focusedlayout>
            </control>
        </control>
    </controls>
</window>