<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Fullscreen Wall -->
	<include name="View_503_Wall">
		<control type="group">
			<visible>Control.IsVisible(503)</visible>
			<include>ViewAnimation</include>

			<control type="panel" id="503">
				<left>0</left>
				<width>FullScreenWidth</width>
				<height>1080</height>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>60</onright>
				<onup>503</onup>
				<ondown>503</ondown>
				<orientation>vertical</orientation>
				<viewtype label="Wall">icon</viewtype>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<scrolltime tween="quadratic">400</scrolltime>
				<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(albums) | Container.Content(addons)</visible>
				<itemlayout width="320" height="460" condition="![Container.Content(albums) | Container.Content(addons)]">
					<control type="group">
						<top>80</top>
						<control type="image">
							<left>0</left>
							<width>320</width>
							<height>460</height>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture background="true">$VAR[PosterThumbVar]</texture>
							<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<left>200</left>
							<top>19</top>
							<width>100</width>
							<height>100</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<bordersize>1</bordersize>
						</control>
						<control type="group">
							<left>30</left>
							<top>45</top>
							<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
						</control>
						<control type="image">
							<left>0</left>
							<width>320</width>
							<height>460</height>
							<texture border="1" colordiffuse="66FFFFFF">black.png</texture>
							<bordersize>20</bordersize>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="320" height="460" condition="![Container.Content(albums) | Container.Content(addons)]">
					<control type="group">
						<top>80</top>
						<control type="image">
							<left>0</left>
							<width>320</width>
							<height>460</height>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture background="true">$VAR[PosterThumbVar]</texture>
							<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<top>4</top>
							<left>4</left>
							<width>312</width>
							<height>452</height>
							<texture border="10">thumbs/thumbnail_focused.png</texture>
							<bordersize>8</bordersize>
							<animation effect="fade" start="100" end="0" time="200" reversible="false">UnFocus</animation>
							<animation effect="fade" start="0" end="100" time="200" reversible="false">Focus</animation>
						</control>
						<control type="image">
							<left>200</left>
							<top>19</top>
							<width>100</width>
							<height>100</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<bordersize>1</bordersize>
						</control>
						<control type="group">
							<left>30</left>
							<top>45</top>
							<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
						</control>
						<control type="image">
							<left>0</left>
							<width>320</width>
							<height>460</height>
							<texture border="1" colordiffuse="66FFFFFF">black.png</texture>
							<animation effect="fade" start="100" end="0" time="200" reversible="false">Focus</animation>
							<animation effect="fade" start="0" end="100" time="200" reversible="false">UnFocus</animation>
							<bordersize>20</bordersize>
						</control>
					</control>
				</focusedlayout>
				<itemlayout width="320" height="320" condition="[Container.Content(albums) | Container.Content(addons)]">
					<control type="group">
						<top>60</top>
						<control type="image">
							<left>0</left>
							<width>320</width>
							<height>320</height>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture background="true">$VAR[PosterThumbVar]</texture>
							<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<left>200</left>
							<top>19</top>
							<width>100</width>
							<height>100</height>
							<texture>overlays/addons/enabled.png</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<visible>StringCompare(ListItem.Label2,$LOCALIZE[449])</visible>
							<bordersize>1</bordersize>
						</control>
						<control type="image">
							<left>0</left>
							<width>320</width>
							<height>320</height>
							<texture border="1" colordiffuse="66FFFFFF">black.png</texture>
							<bordersize>20</bordersize>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="320" height="320" condition="[Container.Content(albums) | Container.Content(addons)]">
					<control type="group">
						<top>60</top>
						<control type="image">
							<left>0</left>
							<width>320</width>
							<height>320</height>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture background="true">$VAR[PosterThumbVar]</texture>
							<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<top>4</top>
							<left>4</left>
							<width>312</width>
							<height>312</height>
							<texture border="10">thumbs/thumbnail_focused.png</texture>
							<bordersize>8</bordersize>
							<animation effect="fade" start="100" end="0" time="150" reversible="false">UnFocus</animation>
							<animation effect="fade" start="0" end="100" time="150" reversible="false">Focus</animation>
						</control>
						<control type="image">
							<left>200</left>
							<top>19</top>
							<width>100</width>
							<height>100</height>
							<texture>overlays/addons/enabled.png</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<visible>StringCompare(ListItem.Label2,$LOCALIZE[449])</visible>
							<bordersize>1</bordersize>
						</control>
						<control type="image">
							<left>0</left>
							<width>320</width>
							<height>320</height>
							<texture border="1" colordiffuse="66FFFFFF">black.png</texture>
							<animation effect="fade" start="100" end="0" time="150" reversible="false">Focus</animation>
							<animation effect="fade" start="0" end="100" time="150" reversible="false">UnFocus</animation>
							<bordersize>20</bordersize>
						</control>
					</control>
				</focusedlayout>
			</control>

			<control type="scrollbar" id="60">
				<left>1906</left>
				<top>0</top>
				<width>14</width>
				<height>1080</height>
				<onup>60</onup>
				<ondown>60</ondown>
				<onleft>502</onleft>
				<onright>SetProperty(MediaMenu,True,home)</onright>
				<onright>SetFocus(9050)</onright>
				<texturesliderbackground>-</texturesliderbackground>
				<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
				<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>

		</control>
	</include>

	<include name="UpDownShadow">
		<control type="group">
			<animation effect="fade" time="300">WindowOpen</animation>
			<animation effect="fade" time="300">WindowClose</animation>
			<visible>Control.IsVisible(503)</visible>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>FullScreenWidth</width>
				<height>120</height>
				<texture border="1">bottom_shadow.png</texture>
			</control>
			<control type="image">
				<left>0</left>
				<top>960</top>
				<width>FullScreenWidth</width>
				<height>120</height>
				<texture border="1" flipy="true">bottom_shadow.png</texture>
			</control>
		</control>
	</include>
</includes>