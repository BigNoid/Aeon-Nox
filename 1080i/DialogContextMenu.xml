<window id="106">
  <defaultcontrol>1000</defaultcontrol>
  <zorder>6</zorder>
  <coordinates>
    <system>1</system>
    <posx>0</posx>
    <posy>0</posy>
  </coordinates>
  <include>Animation_DialogZoom</include>
  <controls>
    <include condition="Skin.HasSetting(effect_bg)">BG_Effect_Home</include>
    <control type="image" id="999">
      <description>background image</description>
      <posx>0</posx>
      <posy>0</posy>
      <width>462</width>
      <height>1080</height>
      <texture>dialogs/context_middle.png</texture>
    </control>
    <control type="grouplist" id="996">
      <posx>0</posx>
      <posy>0</posy>
      <width>462</width>
      <height max="1080">auto</height>
      <itemgap>0</itemgap>
    <control type="button" id="1245">
      <description>actor/director info button (visible only container is MovieActors, MovieDirectors or TvShowActors)</description>
        <posx>0</posx>
        <posy>0</posy>
        <height>58</height>
        <width>462</width>
        <textcolor>context</textcolor>
        <focusedcolor>FFdfdfdf</focusedcolor>
        <texturenofocus>dialogs/context_nofocus.png</texturenofocus>
        <texturefocus>dialogs/shutdown_focus.png</texturefocus>
        <colordiffuse>$INFO[Skin.String(diffuse_bar)]</colordiffuse>
        <align>center</align>
        <font>Font_Reg19</font>
        <pulseonselect>no</pulseonselect>
        <textoffsety>12</textoffsety>
        <label>[Infos] $INFO[ListItem.Label]</label>
        <onclick>RunScript(script.metadata.actors,$INFO[ListItem.Label])</onclick>
        <visible>System.HasAddon(script.metadata.actors) + [SubString(Container.FolderPath,videodb://1/4/) | SubString(Container.FolderPath,videodb://1/5/) | SubString(Container.FolderPath,videodb://2/4/)]</visible>
    </control>
    </control>
    <control type="image" id="997">
      <description>background top image</description>
      <posx>0</posx>
      <posy>-39</posy>
      <width>462</width>
      <height>39</height>
      <texture>dialogs/context_top.png</texture>
    </control>
    <control type="image" id="998">
      <description>background bottom image</description>
      <posx>0</posx>
      <posy>585</posy>
      <width>462</width>
      <height>40</height>
      <texture>dialogs/context_bottom.png</texture>
    </control>
    <control type="button" id="1000">
      <description>button template</description>
      <posx>0</posx>
      <posy>0</posy>
      <height>58</height>
      <width>462</width>
      <textcolor>context</textcolor>
      <focusedcolor>FFdfdfdf</focusedcolor>
      <texturenofocus>dialogs/context_nofocus.png</texturenofocus>
      <texturefocus>dialogs/shutdown_focus.png</texturefocus>
      <colordiffuse>$INFO[Skin.String(diffuse_bar)]</colordiffuse>
      <align>center</align>
      <font>Font_Reg19</font>
      <pulseonselect>no</pulseonselect>
      <textoffsety>12</textoffsety>
    </control>
  </controls>
</window>