    <include name="ShiftProgramThumbs">
        <control type="group">
            <visible>[Window.IsActive(programs) + !Container.Content(addons)]</visible>
            <animation effect="zoom" center="auto" start="100" end="130" time="200" tween="quadratic" easing="out">Focus</animation>
            <animation effect="zoom" center="auto" start="130" end="100" time="200" tween="quadratic" easing="out">Unfocus</animation>
            <include>ShiftPosterThumbs</include>
        </control>
        <control type="group">
            <visible>![[Window.IsActive(programs) + !Container.Content(addons)]]</visible>
            <posy>75</posy>
            <animation effect="zoom" center="150,450" start="100" end="130" time="200" tween="quadratic" easing="out">Focus</animation>
            <animation effect="zoom" center="150,450" start="130" end="100" time="200" tween="quadratic" easing="out">Unfocus</animation>
            <include>ShiftSquareThumbs</include>
        </control>
    </include>
    <include name="ShiftThumbs">
        <control type="group">
            <visible>[Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | [Container.Content(episodes) + SubString(Container.FolderPath,videodb://5/)] | Container.Content(musicvideos) | [Window.IsActive(videos) + Container.content(genres)] | [Window.IsActive(videos) + Container.Content(files)]]</visible>
            <animation effect="zoom" center="auto" start="100" end="130" time="200" tween="quadratic" easing="out">Focus</animation>
            <animation effect="zoom" center="auto" start="130" end="100" time="200" tween="quadratic" easing="out">Unfocus</animation>
            <include>ShiftPosterThumbs</include>
        </control>
        <control type="group">
            <visible>![Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | [Container.Content(episodes) + SubString(Container.FolderPath,videodb://5/)] | Container.Content(musicvideos) | [Window.IsActive(videos) + Container.content(genres)] | [Window.IsActive(videos) + Container.Content(files)]]</visible>
            <posy>75</posy>
            <animation effect="zoom" center="150,450" start="100" end="130" time="200" tween="quadratic" easing="out">Focus</animation>
            <animation effect="zoom" center="150,450" start="130" end="100" time="200" tween="quadratic" easing="out">Unfocus</animation>
            <include>ShiftSquareThumbs</include>
        </control>
    </include>
    <include name="ShiftThumbsSmall">
        <control type="group">
            <visible>[Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | [Container.Content(episodes) + SubString(Container.FolderPath,videodb://5/)] | Container.Content(musicvideos) | [Window.IsActive(videos) + Container.content(genres)] | [Window.IsActive(videos) + Container.Content(files)]]</visible>
            <animation effect="zoom" center="auto" start="100" end="130" time="200" tween="quadratic" easing="out">Focus</animation>
            <animation effect="zoom" center="auto" start="130" end="100" time="200" tween="quadratic" easing="out">Unfocus</animation>
            <include>ShiftPosterThumbsSmall</include>
        </control>
        <control type="group">
            <visible>![Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | [Container.Content(episodes) + SubString(Container.FolderPath,videodb://5/)] | Container.Content(musicvideos) | [Window.IsActive(videos) + Container.content(genres)] | [Window.IsActive(videos) + Container.Content(files)]]</visible>
            <posy>50</posy>
            <animation effect="zoom" center="50,300" start="100" end="130" time="200" tween="quadratic" easing="out">Focus</animation>
            <animation effect="zoom" center="50,300" start="130" end="100" time="200" tween="quadratic" easing="out">Unfocus</animation>
            <include>ShiftSquareThumbsSmall</include>
        </control>
    </include>
    <include name="ShiftView">
        <control type="group">
            <visible>Control.IsVisible(57)</visible>
            <control type="fixedlist" id="57">
                <posx>-120</posx>
                <animation effect="slide" start="0" end="120,270" time="0" condition="Skin.HasSetting(smallshiftview) + !Window.IsActive(programs)">Conditional</animation>
                <posy>300</posy>
                <width>2100</width>
                <height>750</height>
                <onleft>57</onleft>
                <onright>57</onright>
                <onup condition="Window.IsActive(videos) + !IsEmpty(ListItem.Trailer)">1801</onup>
                <onup condition="IsEmpty(ListItem.Trailer)|!Window.IsActive(videos)">9000</onup>
                <ondown>61</ondown>
                <orientation>horizontal</orientation>
                <viewtype label="Shift">BigWrap</viewtype>
                <pagecontrol>61</pagecontrol>
                <scrolltime tween="quadratic" easing="out">200</scrolltime>
                <focusposition>1</focusposition>
                <include>Animation_OpenCloseZoom</include>
                <visible>[Window.IsActive(musicfiles) | Window.IsActive(musiclibrary) | Window.IsActive(videoplaylist) | Window.IsActive(musicplaylist) | Window.isActive(programs) | Window.isActive(addonbrowser) | [Window.IsActive(videos) + [!Container.Content(episodes) | SubString(Container.FolderPath,videodb://5/)]]] + !Container.Content(years)</visible>
                <animation effect="fade" start="100" end="0" time="400" condition="Control.HasFocus(110)">Conditional</animation>
                <itemlayout width="315" height="750" condition="!Skin.HasSetting(smallshiftview) | Window.IsActive(programs)">
                    <include condition="!Window.IsActive(programs)">ShiftThumbs</include>
                    <include condition="Window.IsActive(programs)">ShiftProgramThumbs</include>
                </itemlayout>
                <focusedlayout width="315" height="750" condition="!Skin.HasSetting(smallshiftview) | Window.IsActive(programs)">
                    <control type="image">
                        <posx>-35</posx>
                        <posy>140</posy>
                        <width>390</width>
                        <height>400</height>
                        <fadetime>300</fadetime>
                        <animation effect="slide" start="0,0" delay="2000" end="0,-260" time="400" tween="quadratic" easing="out">Focus</animation>
                        <animation effect="slide" start="0,-260" end="0" time="200" tween="quadratic" easing="in">Unfocus</animation>
                        <animation effect="zoom" start="100" end="70" center="auto" time="200" tween="linear" condition="!Control.HasFocus(57)">Conditional</animation>
                        <aspectratio align="bottom">keep</aspectratio>
                        <texture background="true">$INFO[ListItem.Path,,disc.png]</texture>
                        <visible>Container.Content(movies)</visible>
                        <bordersize>7</bordersize>
                    </control>
                    <control type="group">
                        <include condition="!Window.IsActive(programs)">ShiftThumbs</include>
                        <include condition="Window.IsActive(programs)">ShiftProgramThumbs</include>
                    </control>
                </focusedlayout>
                <itemlayout width="157" height="500" condition="Skin.HasSetting(smallshiftview) + !Window.IsActive(programs)">
                    <include>ShiftThumbsSmall</include>
                </itemlayout>
                <focusedlayout width="157" height="500" condition="Skin.HasSetting(smallshiftview) + !Window.IsActive(programs)">
                    <include>ShiftThumbsSmall</include>
                </focusedlayout>
            </control>
            <control type="group">
                <include>Animation_OpenCloseZoom</include>
                <animation effect="slide" start="0,0" end="-50,0" time="400" easing="inout" tween="circle" condition="Skin.HasSetting(smallshiftview)">Conditional</animation>
                <control type="group">
                    <visible>![[[Skin.HasSetting(movielogosfloor) + Container.Content(movies)] | [Skin.HasSetting(artistslogosfloor) + Container.Content(artists)] | [[Skin.HasSetting(tvshowlogosfloor) | Skin.HasSetting(tvshowbannersfloor)]+ Container.Content(tvshows)]] + !Stringcompare(Control.GetLabel(8822),empty.png)]</visible>
                    <animation effect="fade" start="0" end="100" time="100" delay="100" reversible="false">Visible</animation>
                    <animation effect="fade" start="100" end="0" time="0" delay="0" reversible="false">Hidden</animation>
                    <visible>[Control.IsVisible(8822)  + !Container.OnScrollNext + !Container.OnScrollPrevious] | !Control.IsVisible(8822)</visible>
                    <control type="label">
                        <posx>195</posx>
                        <posy>1002</posy>
                        <width>1245</width>
                        <aligny>center</aligny>
                        <font>Font_Info_Caps</font>
                        <textcolor>floor</textcolor>
                        <shadowcolor>floorshadow</shadowcolor>
                        <label>[UPPERCASE]$VAR[SecondLabelVar][/UPPERCASE]</label>
                    </control>
                    <control type="label">
                        <posx>195</posx>
                        <posy>1040</posy>
                        <width>1245</width>
                        <aligny>center</aligny>
                        <font>Font_ShowcaseMainLabel2_Caps</font>
                        <scroll>true</scroll>
                        <scrollspeed>30</scrollspeed>
                        <textcolor>floor</textcolor>
                        <shadowcolor>floorshadow</shadowcolor>
                        <label>[UPPERCASE]$VAR[FirstLabelVar][/UPPERCASE]</label>
                    </control>
                </control>
            </control>
        </control>
    </include>
</includes>