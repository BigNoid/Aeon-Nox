<includes>
  <include name="ShiftSquareThumbs">
    <control type="image">
      <posx>8</posx>
      <posy>225</posy>
      <width>300</width>
      <height>300</height>
      <fadetime>200</fadetime>
      <texture background="true" diffuse="thumbs/cdcover_mask.png" fallback="DefaultAudio.png">$VAR[ListAlbumVar]</texture>
      <aspectratio scalediffuse="false">scale</aspectratio>
    </control>
    <control type="image">
      <posx>-12</posx>
      <posy>205</posy>
      <width>340</width>
      <height>340</height>
      <fadetime>200</fadetime>
      <aspectratio scalediffuse="false" align="right">scale</aspectratio>
      <texture diffuse="thumbs/cdcover_mask.png">thumbs/cdcover_glass_aa.png</texture>
      <bordertexture border="20">thumbs/cd_shadow.png</bordertexture>
      <bordersize>20</bordersize>
    </control>
    <control type="image">
      <posx>8</posx>
      <posy>525</posy>
      <width>300</width>
      <height>300</height>
      <fadetime>200</fadetime>
      <texture background="true" flipy="true" diffuse="thumbs/cdcover_mask_reflect.png" fallback="DefaultAudio.png">$VAR[ListAlbumVar]</texture>
      <aspectratio scalediffuse="false">scale</aspectratio>
      <animation effect="fade" start="100" end="30" time="200" reversible="true">Focus</animation>
      <animation effect="fade" start="30" end="100" time="200" reversible="true">UnFocus</animation>
    </control>
  </include>

  <include name="ShiftPosterThumbs">
    <control type="image">
      <posx>8</posx>
      <posy>150</posy>
      <width>300</width>
      <height>450</height>
      <fadetime>200</fadetime>
      <texture background="true" diffuse="thumbs/movieposter_mask.png" fallback="DefaultVideoBigPoster.png">$VAR[ListPosterVar]</texture>
      <aspectratio scalediffuse="false">stretch</aspectratio>
    </control>
    <control type="image">
      <posx>-11.5</posx>
      <posy>130.5</posy>
      <width>339</width>
      <height>489</height>
      <fadetime>200</fadetime>
      <texture diffuse="thumbs/movieposter_mask.png">thumbs/thumb_glass.png</texture>
      <bordertexture border="19.5">thumbs/poster_shadow.png</bordertexture>
      <bordersize>19.5</bordersize>
    </control>
    <control type="image">
      <posx>8</posx>
      <posy>601</posy>
      <width>300</width>
      <height>450</height>
      <fadetime>200</fadetime>
      <texture background="true" flipy="true" diffuse="thumbs/movieposter_mask_reflect.png" fallback="DefaultVideoBigPoster.png">$VAR[ListPosterVar]</texture>
      <aspectratio scalediffuse="false">stretch</aspectratio>
      <animation effect="fade" start="100" end="30" time="200" reversible="true">Focus</animation>
      <animation effect="fade" start="30" end="100" time="200" reversible="true">UnFocus</animation>
    </control>
    <control type="image">
      <description>overlay</description>
      <posx>218</posx>
      <posy>150</posy>
      <width>90</width>
      <height>90</height>
      <include condition="!Skin.HasSetting(AltNewOverlay)">OverlayVisibility0</include>
      <include condition="Skin.HasSetting(AltNewOverlay)">AltOverlayVisibility0</include>
    </control>
  </include>
  
  <include name="ShiftProgramThumbs">
    <control type="group">
      <visible>Substring(Container.FolderPath,advanced.launcher) + SubString(ListItem.Writer,IBM PC)</visible>
      <animation effect="zoom" center="auto" start="100" end="130" time="200" tween="quadratic" easing="out">Focus</animation>
      <animation effect="zoom" center="auto" start="130" end="100" time="200" tween="quadratic" easing="out">Unfocus</animation>
      <include>ShiftPosterThumbs</include>
    </control>
    <control type="group">
      <visible>![Substring(Container.FolderPath,advanced.launcher) + SubString(ListItem.Writer,IBM PC)]</visible>
      <posy>75</posy>
      <animation effect="zoom" center="150,450" start="100" end="130" time="200" tween="quadratic" easing="out">Focus</animation>
      <animation effect="zoom" center="150,450" start="130" end="100" time="200" tween="quadratic" easing="out">Unfocus</animation>
      <include>ShiftSquareThumbs</include>
    </control>
  </include>
  
  <include name="ShiftThumbs">
    <control type="group">
      <visible>[Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | [Container.Content(episodes) + SubString(Container.FolderPath,videodb://5/)] | Container.Content(musicvideos) | [Window.IsActive(videos) + Container.content(genres)] | [Window.IsActive(videos) + Container.Content(files)]]</visible>
      <animation effect="zoom" center="auto" start="100" end="130" time="200" tween="quadratic" easing="out">Focus</animation>
      <animation effect="zoom" center="auto" start="130" end="100" time="200" tween="quadratic" easing="out">Unfocus</animation>
      <include>ShiftPosterThumbs</include>
    </control>
    <control type="group">
      <visible>![Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | [Container.Content(episodes) + SubString(Container.FolderPath,videodb://5/)] | Container.Content(musicvideos) | [Window.IsActive(videos) + Container.content(genres)] | [Window.IsActive(videos) + Container.Content(files)]]</visible>
      <posy>75</posy>
      <animation effect="zoom" center="150,450" start="100" end="130" time="200" tween="quadratic" easing="out">Focus</animation>
      <animation effect="zoom" center="150,450" start="130" end="100" time="200" tween="quadratic" easing="out">Unfocus</animation>
      <include>ShiftSquareThumbs</include>
    </control>
  </include>
  
  <include name="ShiftView">
    <control type="group">
      <visible>Control.IsVisible(57)</visible>
      <control type="fixedlist" id="57">
        <posx>-120</posx>
        <posy>300</posy>
        <width>2100</width>
        <height>750</height>
        <onleft>57</onleft>
        <onright>57</onright>
        <onup condition="Window.IsActive(videos) + !IsEmpty(ListItem.Trailer)">1801</onup>
        <onup condition="IsEmpty(ListItem.Trailer)|!Window.IsActive(videos)">9000</onup>
        <ondown>61</ondown>
        <orientation>horizontal</orientation>
        <viewtype label="31235">BigWrap</viewtype>
        <pagecontrol>61</pagecontrol>
        <scrolltime tween="quadratic" easing="out">200</scrolltime>
        <focusposition>1</focusposition>
        <include>Animation_OpenCloseZoom</include>
        <visible>[Window.IsActive(musicfiles) | Window.IsActive(musiclibrary) | Window.IsActive(musicplaylist) | Window.isActive(programs) | Window.isActive(addonbrowser) | [Window.IsActive(videos) + [!Container.Content(episodes) | SubString(Container.FolderPath,videodb://5/)]]] + !Container.Content()</visible>
        <animation effect="fade" start="100" end="0" time="400" condition="Control.HasFocus(110)">Conditional</animation>
        <itemlayout width="315" height="750">
          <include condition="!Window.IsActive(programs)">ShiftThumbs</include>
          <include condition="Window.IsActive(programs)">ShiftProgramThumbs</include>
        </itemlayout>
        <focusedlayout width="315" height="750">
          <include condition="!Window.IsActive(programs)">ShiftThumbs</include>
          <include condition="Window.IsActive(programs)">ShiftProgramThumbs</include>
        </focusedlayout>
      </control>
      <control type="group">
        <visible>!Control.HasFocus(110)</visible>
        <include>Animation_OpenCloseZoom</include>
        <include>Animation_VisibleChange200</include>
        <control type="label">
          <posx>195</posx>
          <posy>1005</posy>
          <width>1245</width>
          <align>left</align>
          <aligny>center</aligny>
          <font>Font_Info_Caps</font>
          <textcolor>floor</textcolor>
          <shadowcolor>floorshadow</shadowcolor>
          <label>[UPPERCASE]$VAR[SecondLabelVar][/UPPERCASE]</label>
        </control>
        <control type="label">
          <posx>195</posx>
          <posy>1040</posy>
          <width>1245</width>
          <align>left</align>
          <aligny>center</aligny>
          <font>Font_ShowcaseMainLabel2_Caps</font>
          <scroll>true</scroll>
          <scrollspeed>50</scrollspeed>
          <textcolor>floor</textcolor>
          <shadowcolor>floorshadow</shadowcolor>
          <label>[UPPERCASE]$VAR[FirstLabelVar][/UPPERCASE]</label>
        </control>
      </control>
    </control>
  </include>
</includes>