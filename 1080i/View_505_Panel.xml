<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!--PORTRAIT-->
	<include name="View_505_Panel">
		<include>ViewAnimation</include>
		<control type="fixedlist" id="505">
			<viewtype label="Panel">wrap</viewtype>
			<left>45</left>
			<top>335</top>
			<width>1908</width>
			<height>840</height>
			<onup>SetProperty(MediaMenu,True,home)</onup>
			<onup>SetFocus(9050)</onup>
			<ondown>60</ondown>
			<onleft>505</onleft>
			<onright>505</onright>
			<focusposition>1</focusposition>
			<preloaditems>2</preloaditems>
			<pagecontrol>60</pagecontrol>
			<orientation>horizontal</orientation>
			<visible>[Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes)]</visible>
			<itemlayout width="600" height="843">
				<control type="label">
					<top>327</top>
					<left>15</left>
					<width>465</width>
					<height>30</height>
					<label>[B]$INFO[ListItem.Label][/B]</label>
					<font>font16_title</font>
					<textcolor>grey</textcolor>
				</control>
				<control type="image">
					<left>495</left>
					<top>328</top>
					<width>42</width>
					<height>28</height>
					<aspectratio>keep</aspectratio>
					<texture>$VAR[UnFocusHDIndicator]</texture>
					<colordiffuse>grey</colordiffuse>
				</control>
				<control type="textbox">
					<top>370</top>
					<left>15</left>
					<width>525</width>
					<align>justify</align>
					<height>350</height>
					<label>$VAR[VideoPlotVar2]</label>
					<font>font14_textbox</font>
					<textcolor>grey</textcolor>
				</control>
				<include>viewPanelTextbox-ContainerCommons</include>
			</itemlayout>
			<focusedlayout width="600" height="843">
				<control type="image">
					<width>555</width>
					<height>730</height>
					<texture>listselect_fo.png</texture>
				</control>
				<control type="label">
					<top>327</top>
					<left>15</left>
					<width>465</width>
					<height>30</height>
					<label>[B]$INFO[ListItem.Label][/B]</label>
					<font>font16_title</font>
					<textcolor>white2</textcolor>
				</control>
				<control type="image">
					<left>495</left>
					<top>328</top>
					<width>42</width>
					<height>28</height>
					<aspectratio>keep</aspectratio>
					<texture>$VAR[UnFocusHDIndicator]</texture>
					<colordiffuse>white2</colordiffuse>
				</control>
				<control type="textbox">
					<top>370</top>
					<left>15</left>
					<width>525</width>
					<align>justify</align>
					<height>350</height>
					<label>$VAR[VideoPlotVar2]</label>
					<font>font14_textbox</font>
					<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll) + !Control.HasFocus(61)</autoscroll>
					<textcolor>white2</textcolor>
				</control>
				<include>viewPanelTextbox-ContainerCommons</include>
			</focusedlayout>
		</control>
		<control type="scrollbar" id="60">
			<visible>Control.IsVisible(505)</visible>
			<left>0</left>
			<top>1066</top>
			<width>1920</width>
			<height>14</height>
			<onup>505</onup>
			<ondown>505</ondown>
			<orientation>horizontal</orientation>
			<texturesliderbackground border="1">-</texturesliderbackground>
			<texturesliderbar border="6,0,6,0">scrollbar/texturesliderbar_hor.png</texturesliderbar>
			<texturesliderbarfocus border="6,0,6,0">scrollbar/texturesliderbarfocus_hor.png</texturesliderbarfocus>
			<textureslidernib>-</textureslidernib>
			<textureslidernibfocus>-</textureslidernibfocus>
			<animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
		</control>
	</include>
	<include name="viewPanelTextbox-ContainerCommons">
		<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes)</visible>
		<control type="group">
			<control type="group">
				<left>15</left>
				<top>15</top>
				<control type="image">
					<visible>Container.Content(movies) | Container.Content(tvshows)</visible>
					<width>525</width>
					<height>296</height>
					<texture fallback="special://skin/backgrounds/default_bg.jpg" background="true">$INFO[ListItem.Art(fanart)]</texture>
					<aspectratio align="center" aligny="center">scale</aspectratio>
				</control>
				<control type="image">
					<visible>Container.Content(movies) | Container.Content(tvshows)</visible>
					<left>75</left>
					<width>375</width>
					<height>278</height>
					<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
					<aspectratio align="center" aligny="bottom">keep</aspectratio>
				</control>
				<control type="image">
					<visible>Container.Content(episodes)</visible>
					<width>525</width>
					<height>296</height>
					<texture fallback="special://skin/backgrounds/default_bg.jpg" background="true">$INFO[ListItem.Art(thumb)]</texture>
					<aspectratio align="center" aligny="center">scale</aspectratio>
				</control>
				<control type="image">
					<left>-20</left>
					<top>5</top>
					<width>85</width>
					<height>90</height>
					<aspectratio>keep</aspectratio>
					<texture background="true">oscars.png</texture>
					<visible>Skin.HasSetting(oscars505) + [SubString(ListItem.FileName,.oscars) | StringCompare(Container.FolderPath,special://profile/playlists/video/BestPicture.xsp)]</visible> 
				</control>
				<control type="image">
					<left>456</left>
					<top>0</top>
					<width>80</width>
					<height>80</height>
					<texture>$VAR[OverlayVar]</texture>
					<aspectratio align="center" aligny="top">keep</aspectratio>
				</control>
			</control>
		</control>
	</include>
</includes>