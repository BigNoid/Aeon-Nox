				<left>0</left>
				<top>500</top>
				<width>1920</width>
				<height>680</height>
				<texture>floor.png</texture>
				<visible>Skin.HasSetting(bannerinfofloor)</visible>
			</control>
			<control type="image">
				<description>background image</description>
				<posx>90</posx>
				<posy>1080</posy>
				<width>1740</width>
				<height>964</height>
				<texture border="40">panel_reflect.png</texture>
				<visible>Skin.HasSetting(bannerinfofloor)</visible>
			</control>
			<control type="image">
				<description>background image</description>
				<posx>90</posx>
				<posy>148</posy>
				<width>1740</width>
				<height>964</height>
				<texture border="40">listpanel_back.png</texture>
				<visible>Skin.HasSetting(bannerinfofloor)</visible>
			</control>  			
			<control type="fixedlist" id="506">
				<viewtype label="BannerInfo">icon</viewtype>
				<left>115</left>
				<top>177</top>
				<height>905</height>
				<width>980</width>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>60</onright>
				<onup>506</onup>
				<ondown>506</ondown>
				<orientation>vertical</orientation>
				<focusposition>2</focusposition>
				<movement>2</movement>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<pagecontrol>60</pagecontrol>
				<visible>Container.Content(tvshows) | Container.Content(movies)</visible>
				<itemlayout width="980" height="181">
					<control type="image">
						<width>980</width>
						<height>181</height>
						<texture>background.png</texture>
						<fadetime>400</fadetime>
						<colordiffuse>background</colordiffuse>
					</control>
					<control type="image">
						<width>980</width>
						<height>181</height>
						<aspectratio>stretch</aspectratio>
						<texture background="true">$VAR[BannerThumb]</texture>
						<fadetime>400</fadetime>
						<colordiffuse>BAffffff</colordiffuse>
						<visible>!IsEmpty(ListItem.Art(banner)) | IsEmpty(ListItem.Art(fanart))</visible>
					</control>
					<control type="group">
						<visible>IsEmpty(ListItem.Art(banner))</visible>
						<control type="image">
							<width>980</width>
							<height>181</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
							<colordiffuse>BAffffff</colordiffuse>
							<fadetime>400</fadetime>
						</control>
						<control type="image">
							<left>15</left>
							<width>400</width>
							<height>181</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
							<colordiffuse>BAffffff</colordiffuse>
							<fadetime>400</fadetime>
							<bordersize>0</bordersize>
						</control>
					</control>
					<control type="image">
						<left>900</left>
						<top>0</top>
						<width>80</width>
						<height>80</height>
						<texture>$VAR[OverlayVar]</texture>
						<aspectratio align="center" aligny="top">keep</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout width="980" height="181">
					<control type="group">
						<animation type="Focus">
							<effect type="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" />
							<effect type="fade" start="80" end="100" time="200" tween="sine" easing="in" />
						</animation>
						<control type="image">
							<width>980</width>
							<height>181</height>
							<texture>background.png</texture>
							<fadetime>400</fadetime>
							<colordiffuse>background</colordiffuse>
						</control>
						<control type="image">
							<width>980</width>
							<height>181</height>
							<aspectratio>stretch</aspectratio>
							<texture background="true">$VAR[BannerThumb]</texture>
							<fadetime>400</fadetime>
							<bordertexture colordiffuse="blue" border="8">thumbs/thumbnail_focused.png</bordertexture>
							<bordersize>8</bordersize>
							<visible>!IsEmpty(ListItem.Art(banner)) | IsEmpty(ListItem.Art(fanart))</visible>
						</control>
						<control type="group">
							<visible>IsEmpty(ListItem.Art(banner))</visible>
							<control type="image">
								<width>980</width>
								<height>181</height>
								<aspectratio>scale</aspectratio>
								<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
								<fadetime>400</fadetime>
								<bordertexture colordiffuse="blue" border="8">thumbs/thumbnail_focused.png</bordertexture>
								<bordersize>8</bordersize>
							</control>
							<control type="image">
								<left>15</left>
								<width>400</width>
								<height>181</height>
								<aspectratio>keep</aspectratio>
								<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
								<fadetime>400</fadetime>
								<bordersize>2</bordersize>
							</control>
						</control>
						<control type="image">
							<left>892</left>
							<top>8</top>
							<width>80</width>
							<height>80</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<posx>1098</posx>
				<posy>180</posy>
				<width>14</width>
				<height>896</height>
				<onright>61</onright>
				<onleft>505</onleft>
				<ondown>60</ondown>
				<onup>60</onup>
				<showonepage>false</showonepage>
				<texturesliderbackground></texturesliderbackground>
				<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
				<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
			</control>
			<control type="image">
				<left>1122</left>
				<top>175</top>
				<width>685</width>
				<height>385</height>
				<aspectratio>scale</aspectratio>
				<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
				<fadetime>400</fadetime>
				<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
				<bordersize>2</bordersize>
			</control>
			<control type="label">
				<left>1110</left>
				<top>570</top>
				<width>628</width>
				<height>60</height>
				<font>font16_title</font>
				<textcolor>grey</textcolor>
				<scroll>true</scroll>
				<label>[B]$VAR[FloorLabelVar][/B]</label>
				<textoffsetx>15</textoffsetx>
			</control>
			<control type="image">
				<left>1750</left>
				<top>587</top>
				<width>42</width>
				<height>28</height>
				<aspectratio>keep</aspectratio>
				<texture>$VAR[UnFocusHDIndicator]</texture>
				<colordiffuse>grey</colordiffuse>
			</control>
			<control type="grouplist">
				<left>1110</left>
				<top>632</top>
				<width>685</width>
				<height>270</height>
				<itemgap>5</itemgap>
				<control type="label">
					<label>$INFO[ListItem.Genre]</label>
					<textcolor>grey</textcolor>
					<width>680</width>
					<height>40</height>
					<include>ShowCaseInfoPanelButtonsValues</include>
					<visible>!IsEmpty(ListItem.Genre)</visible>
				</control>
				<control type="label">
					<label>$VAR[VideoSubLabelVar]</label>
					<textcolor>grey</textcolor>
					<width>680</width>
					<height>40</height>
					<include>ShowCaseInfoPanelButtonsValues</include>
					<visible>![SubString(ListItem.Path,videodb://movies/sets) + !Stringcompare(ListItem.Label,..)]</visible>
				</control>
			</control>
			<control type="textbox">
