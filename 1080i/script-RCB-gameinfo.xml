<?xml version="1.0" encoding="utf-8"?>
<window>
    <allowoverlay>yes</allowoverlay>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <animation type="WindowOpen" reversible="false">
        <effect type="zoom" start="150" end="100" center="960,540" time="500" tween="cubic" easing="out" />
        <effect type="fade" start="0" end="100" time="250" />
    </animation>
    <animation type="WindowClose" reversible="false">
        <effect type="fade" start="100" end="0" time="300" />
        <effect type="zoom" start="100" end="130" center="960,540" time="300" tween="cubic" easing="in" />
    </animation>
    <controls>
        <!-- gameinfoviewgamelist -->
        <control type="group" id="1000">
            <control type="wraplist" id="59">
                <posx>0</posx>
                <posy>0</posy>
                <width>0</width>
                <height>0</height>
                <onleft>3000</onleft>
                <onright>3000</onright>
                <onup>3000</onup>
                <ondown>3000</ondown>
                <scrolltime>200</scrolltime>
                <itemlayout height="0" width="0" />
                <focusedlayout height="0" width="0"></focusedlayout>
            </control>
        </control>
        <control type="image">
            <include>FullscreenDimensions</include>
            <fadetime>600</fadetime>
            <texture background="true">$INFO[ListItem.Property(background)]</texture>
            <aspectratio>scale</aspectratio>
        </control>
        <control type="image">
            <description>black background shadow</description>
            <posx>0</posx>
            <posy>404</posy>
            <width>1923</width>
            <height>780</height>
            <texture>home/nowplaying_shadow.png</texture>
        </control>
        <control type="videowindow">
            <description>video control</description>
            <include>FullscreenDimensions</include>
            <visible>!IsEmpty(ListItem.Property(videosizebig))</visible>
        </control>
        <control type="image">
            <description>black background shadow</description>
            <posx>0</posx>
            <posy>404</posy>
            <width>1923</width>
            <height>780</height>
            <colordiffuse>grey2</colordiffuse>
            <texture>home/nowplaying_shadow.png</texture>
        </control>
        <control type="image">
            <posx>0</posx>
            <posy>622</posy>
            <width>1920</width>
            <height>608</height>
            <texture>views/showcase_glow.png</texture>
            <colordiffuse>$VAR[ExtendedColorDiffuseVar]</colordiffuse>
            <visible>Skin.HasSetting(Glowbar_Home)</visible>
            <include>Animation_VisibleChange400</include>
            <include>Animation_WindowFade200</include>
        </control>
        <control type="group">
            <posx>30</posx>
            <posy>0</posy>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>445</width>
                <height>250</height>
                <aspectratio>keep</aspectratio>
                <fadetime>400</fadetime>
                <texture background="true">$INFO[ListItem.Property(gameinfoupperleft)]</texture>
                <bordertexture border="7">thumbs/thumbshadow.png</bordertexture>
                <bordersize>7</bordersize>
            </control>
            <control type="image">
                <posx>0</posx>
                <posy>277</posy>
                <width>445</width>
                <height>250</height>
                <aspectratio>keep</aspectratio>
                <fadetime>400</fadetime>
                <texture background="true">$INFO[ListItem.Property(gameinfolowerleft)]</texture>
                <bordertexture border="7">thumbs/thumbshadow.png</bordertexture>
                <bordersize>7</bordersize>
            </control>
        </control>
        <control type="group">
            <posx>475r</posx>
            <posy>0</posy>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>445</width>
                <height>250</height>
                <aspectratio>keep</aspectratio>
                <fadetime>400</fadetime>
                <texture background="true">$INFO[ListItem.Property(gameinfoupperright)]</texture>
                <bordertexture border="7">thumbs/thumbshadow.png</bordertexture>
                <bordersize>7</bordersize>
            </control>
            <control type="image">
                <posx>0</posx>
                <posy>277</posy>
                <width>445</width>
                <height>250</height>
                <aspectratio>keep</aspectratio>
                <fadetime>400</fadetime>
                <texture background="true">$INFO[ListItem.Property(gameinfolowerright)]</texture>
                <bordertexture border="7">thumbs/thumbshadow.png</bordertexture>
                <bordersize>7</bordersize>
            </control>
        </control>
        <control type="grouplist">
            <posx>500</posx>
            <posy>727</posy>
            <width>1290</width>
            <align>left</align>
            <itemgap>40</itemgap>
            <orientation>horizontal</orientation>
            <control type="label">
                <textcolor>white2</textcolor>
                <font>Font_Condensed22_Caps</font>
                <shadowcolor>black</shadowcolor>
                <include>BreadcrumbsLabel</include>
                <label>$INFO[Control.GetLabel(3000)]</label>
                <animation effect="fade" start="100" end="50" time="300" tween="cubic" easing="inout" condition="!Control.HasFocus(3000)">Conditional</animation>
                <visible>Control.IsEnabled(3000) + Control.IsVisible(3000)</visible>
            </control>
            <control type="label">
                <textcolor>white2</textcolor>
                <font>Font_Condensed22_Caps</font>
                <shadowcolor>black</shadowcolor>
                <include>BreadcrumbsLabel</include>
                <label>$INFO[Control.GetLabel(3001)]</label>
                <animation effect="fade" start="100" end="50" time="300" tween="cubic" easing="inout" condition="!Control.HasFocus(3001)">Conditional</animation>
                <visible>Control.IsEnabled(3001) + Control.IsVisible(3001)</visible>
            </control>
        </control>
        <control type="grouplist" id="5000">
            <description>Default musicinformation buttons</description>
            <posx>-100</posx>
            <posy>-150</posy>
            <width>0</width>
            <height>0</height>
            <onleft>5000</onleft>
            <onright>50</onright>
            <onup>IncreaseRating</onup>
            <ondown>DecreaseRating</ondown>
            <align>left</align>
            <orientation>horizontal</orientation>
            <itemgap>50</itemgap>
            <control type="button" id="3000">
                <description>Play game</description>
                <label>Play Game</label>
                <include>HiddenObject</include>
            </control>
            <control type="button" id="3001">
                <description>Play video</description>
                <label>Play video</label>
                <include>HiddenObject</include>
                <onclick>XBMC.PlayMedia($INFO[ListItem.Property(gameplayinfo)],1)</onclick>
                <visible>!IsEmpty(ListItem.Property(autoplayvideoinfo)) + !IsEmpty(ListItem.Property(gameplayinfo))</visible>
            </control>
        </control>
        <control type="group">
            <posx>0</posx>
            <posy>854</posy>
            <control type="image">
                <description>Cover image</description>
                <posy>-315</posy>
                <posx>40</posx>
                <width>410</width>
                <height>465</height>
                <texture>$INFO[ListItem.Icon]</texture>
                <aspectratio aligny="bottom">keep</aspectratio>
