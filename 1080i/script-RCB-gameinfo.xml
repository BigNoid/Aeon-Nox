                    <posx>500</posx>
                    <posy>-136</posy>
                    <width>900</width>
                    <height>4</height>
                    <texture>views/list_divider.png</texture>
                </control>
                <control type="group">
                    <control type="label">
                        <posx>500</posx>
                        <posy>-270</posy>
                        <width>1405</width>
                        <height>38</height>
                        <align>left</align>
                        <aligny>-</aligny>
                        <scroll>true</scroll>
                        <font>Font_Condensed60</font>
                        <label>$INFO[Listitem.Label]</label>
                        <textcolor>white2</textcolor>
                        <shadowcolor>black</shadowcolor>
                    </control>
                    <control type="label">
                        <posx>500</posx>
                        <posy>-210</posy>
                        <width>1405</width>
                        <height>38</height>
                        <align>left</align>
                        <aligny>-</aligny>
                        <scroll>true</scroll>
                        <font>Font_Condensed60</font>
                        <label>$INFO[ListItem.Property(year)]$INFO[ListItem.Property(genre), • ]</label>
                        <textcolor>white3</textcolor>
                        <shadowcolor>black</shadowcolor>
                    </control>
                </control>
                <control type="textbox" id="8000">
                    <description>Plot</description>
                    <posx>1420</posx>
                    <posy>-134</posy>
                    <width>485</width>
                    <height>312</height>
                    <align>justify</align>
                    <font>Font_Condensed22</font>
                    <pagecontrol>60</pagecontrol>
                    <autoscroll delay="15000" time="5000" repeat="10000">Skin.HasSetting(AutoScroll)</autoscroll>
                    <textcolor>grey2</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <label>$INFO[ListItem.Property(plot)]</label>
                </control>
                <control type="group">
                    <control type="grouplist">
                        <posx>500</posx>
                        <posy>-80</posy>
                        <width>778</width>
                        <orientation>horizontal</orientation>
                        <control type="label">
                            <width min="50" max="400">auto</width>
                            <font>Font_Condensed22</font>
