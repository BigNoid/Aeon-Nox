<includes>
  <include name="ThumbnailView">
    <control type="group">
      <visible>Control.IsVisible(551)</visible>
      <include>Animation_VisibleChange200</include>
      <include>Animation_OpenCloseZoom_New</include>
      <control type="panel" id="551">
        <posx>129</posx>
        <posy>124</posy>
        <width>1665</width>
        <height>807</height>
        <onleft>9000</onleft>
        <onright>60</onright>
        <onup>551</onup>
        <ondown>551</ondown>
        <viewtype label="21371">Icon</viewtype>
        <pagecontrol>60</pagecontrol>
        <scrolltime tween="quadratic" easing="out">200</scrolltime>
        <preloaditems>2</preloaditems>
        <itemlayout height="268" width="333">
          <control type="image">
            <posx>9</posx>
            <posy>0</posy>
            <width>315</width>
            <height>234</height>
            <bordertexture border="7">thumbs/thumbshadow.png</bordertexture>
            <bordersize>7</bordersize>
            <texture background="true" fallback="DefaultGenre.png">$VAR[ThumbnailVar]</texture>
            <animation effect="fade" end="90" time="0" condition="true">Conditional</animation>
          </control>
          <control type="label">
            <posx>166</posx>
            <posy>232</posy>
            <width>300</width>
            <height>38</height>
            <font>Font_Info</font>
            <textcolor>grey2</textcolor>
            <selectedcolor>selected</selectedcolor>
            <align>center</align>
            <aligny>center</aligny>
            <info>ListItem.Label</info>
          </control>
          <control type="image">
            <posx>279</posx>
            <posy>195</posy>
            <width>45</width>
            <height>45</height>
            <aspectratio>keep</aspectratio>
            <texture>$INFO[ListItem.Overlay]</texture>
          </control>
        </itemlayout>
        <focusedlayout height="268" width="333">
          <control type="image">
            <posx>11</posx>
            <posy>2</posy>
            <width>311</width>
            <height>230</height>
            <bordertexture border="5">featured/tile_fo.png</bordertexture>
            <bordersize>5</bordersize>
            <texture background="true" fallback="DefaultGenre.png">$VAR[ThumbnailVar]</texture>
          </control>
          <control type="label">
            <posx>166</posx>
            <posy>232</posy>
            <width>300</width>
            <height>38</height>
            <font>Font_Info</font>
            <textcolor>white</textcolor>
            <selectedcolor>selected</selectedcolor>
            <align>center</align>
            <aligny>center</aligny>
            <info>ListItem.Label</info>
          </control>
          <control type="image">
            <posx>279</posx>
            <posy>195</posy>
            <width>45</width>
            <height>45</height>
            <aspectratio>keep</aspectratio>
            <texture>$INFO[ListItem.Overlay]</texture>
          </control>
        </focusedlayout>
      </control>
      <control type="scrollbar" id="60">
        <posx>1815</posx>
        <posy>132</posy>
        <width>9</width>
        <height>802</height>
        <animation effect="fade" start="100" end="0" time="0" condition="!Control.HasFocus(60)">Conditional</animation>
        <include>CommonVerticalScrollbar</include>
        <onleft>551</onleft>
        <onright>9000</onright>
      </control>
    </control>
  </include>
</includes>