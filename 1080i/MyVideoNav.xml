            <include condition="!Skin.HasSetting(DisableShowCaseVL)+IsEmpty(Window(Home).Property(DontRunTVShowScripts))">ShowcaseQuadrate</include>
            <!-- view id = 512-->
            <include condition="!Skin.HasSetting(DisableInfoWallVL)">AddonWall</include>
