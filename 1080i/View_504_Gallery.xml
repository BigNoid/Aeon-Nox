<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!--STRIP LAYOUT-->
	<include name="View_504_Gallery">
		<include>ViewAnimation</include>
		<!--content detail-->
		<control type="group">
			<visible>Control.IsVisible(504)</visible>
			<!--flags-->
			<control type="label">
				<left>398</left>
				<top>600</top>
				<label>[B]$INFO[ListItem.Label][/B]</label>
				<width>1125</width>
				<font>font16_title</font>
				<textcolor>white</textcolor>
				<visible>!Window.IsActive(pictures)</visible>
			</control>
			<control type="label">
				<left>397.5</left>
				<top>600</top>
				<align>center</align>
				<label>[B]$INFO[ListItem.Label][/B]</label>
				<width>1125</width>
				<font>font16_title</font>
				<textcolor>white</textcolor>
				<visible>Window.IsActive(pictures)</visible>
			</control>
			<control type="image">
				<left>1475</left>
				<top>827</top>
				<width>42</width>
				<height>28</height>
				<aspectratio>keep</aspectratio>
				<texture>$VAR[UnFocusHDIndicator]</texture>
				<visible>Container.Content(movies) + Skin.HasSetting(noindicatorgallerymovies)</visible>
				<colordiffuse>white</colordiffuse>
			</control>
			<control type="label">
				<left>398</left>
				<top>860</top>
				<width>1125</width>
				<height>30</height>
				<align>left</align>
				<font>font13_title</font>
				<textcolor>white</textcolor>
				<label>$VAR[FloorSubLabelVar]</label>
				<visible>!Container.Content(artists)</visible>
				<visible>!ListItem.IsCollection</visible>
			</control>
			<control type="label">
				<left>398</left>
				<top>892</top>
				<width>1125</width>
				<height>30</height>
				<align>left</align>
				<font>font13_title</font>
				<textcolor>white</textcolor>
				<label>$INFO[ListItem.Genre]</label>
			</control>
			<!-- Next Episode -->
			<control type="label">
				<top>890</top>
				<left>398</left>
				<width>1220</width>
				<height>100</height>
				<align>left</align>
				<font>font13_title</font>
				<textcolor>white</textcolor>
				<label>Next Episode: $INFO[Window(Home).Property(NextAired.NextNumber)] - $INFO[Window(Home).Property(NextAired.NextTitle)]	  ($INFO[Window(Home).Property(NextAired.NextDay)])</label>
				<visible>[!IsEmpty(Window(Home).Property(NextAired.NextDate)) + !Control.HasFocus(61)] + Skin.HasSetting(noextendedinfotvshows)</visible>
			</control>
			<!-- Next Aired Status -->
			<control type="label">
				<top>890</top>
				<left>398</left>
				<width>1220</width>
				<height>100</height>
				<align>left</align>
				<font>font13_title</font>
				<textcolor>white</textcolor>
				<label>$INFO[Window(Home).Property(NextAired.Status)]</label>
				<visible>[IsEmpty(Window(Home).Property(NextAired.NextDate)) + !IsEmpty(Window(Home).Property(NextAired.Status)) + !Control.HasFocus(61)] + Skin.HasSetting(noextendedinfotvshows)</visible>
			</control>
			<control type="label">
				<left>398</left>
				<top>860</top>
				<width>1125</width>
				<height>30</height>
				<align>left</align>
				<font>font13_title</font>
				<textcolor>white</textcolor>
				<label>$INFO[ListItem.Property(Artist_Genre)]</label>
				<visible>Container.Content(artists)</visible>
			</control>
		</control>
		<!--strip top-->
		<control type="group">
			<visible>Control.IsVisible(504)</visible>
			<!--container-->
			<control type="fixedlist" id="504">
				<viewtype label="Gallery">info</viewtype>
				<left>-772</left>
				<top>150</top>
				<width>2850</width>
				<height>1200</height>
				<onleft>504</onleft>
				<onright>504</onright>
				<onup>SetProperty(MediaMenu,True,home)</onup>
				<onup>SetFocus(9050)</onup>
				<ondown>61</ondown>
				<preloaditems>2</preloaditems>
				<focusposition>1</focusposition>
				<orientation>horizontal</orientation>
				<visible>[Container.Content(movies) | Container.Content(tvshows) | Window.IsActive(pictures) | Container.Content(artists) | Container.Content(sets)] + !Container.Content(addons)</visible>
				<itemlayout width="1125" height="663">
					<control type="group">
						<left>45</left>
						<top>15</top>
						<control type="image">
							<width>1125</width>
							<height>633</height>
							<texture background="true">background.png</texture>
							<colordiffuse>background</colordiffuse>
						</control>
						<control type="image">
							<visible>!Window.IsActive(pictures)</visible>
							<width>1125</width>
							<height>633</height>
							<texture fallback="$INFO[Skin.String(CustomDefaultBackground)]" background="true">$INFO[ListItem.Art(fanart)]</texture>
							<aspectratio align="center" aligny="center">scale</aspectratio>
							<colordiffuse>BAffffff</colordiffuse>
						</control>
						<control type="image">
							<visible>Window.IsActive(pictures)</visible>
							<width>1125</width>
							<height>633</height>
							<texture background="true">$INFO[ListItem.PicturePath]</texture>
							<aspectratio align="center" aligny="center">keep</aspectratio>
							<colordiffuse>BAffffff</colordiffuse>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="1125" height="633">
					<control type="group">
						<left>45</left>
						<top>15</top>
						<control type="image">
							<width>1125</width>
							<height>633</height>
							<texture background="true">background.png</texture>
							<colordiffuse>background</colordiffuse>
						</control>
						<control type="image">
							<visible>ListItem.IsFolder</visible>
							<width>1125</width>
							<height>633</height>
							<texture background="true">background.png</texture>
							<colordiffuse>background</colordiffuse>
							<fadetime>400</fadetime>
							<bordertexture border="8">thumbs/thumbnail_focused.png</bordertexture>
							<bordersize>8</bordersize>
						</control>
						<control type="image">
							<visible>ListItem.IsFolder + !Container.Content(artists)</visible>
							<width>1125</width>
							<height>633</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Thumb]</texture>
						</control>
						<control type="image">
							<visible>!Window.IsActive(pictures)</visible>
							<width>1125</width>
							<height>633</height>
							<texture fallback="$INFO[Skin.String(CustomDefaultBackground)]" background="true">$INFO[ListItem.Art(fanart)]</texture>
							<aspectratio align="center" aligny="center">scale</aspectratio>
							<fadetime>400</fadetime>
							<bordertexture border="8">thumbs/thumbnail_focused.png</bordertexture>
							<bordersize>8</bordersize>
						</control>
						<control type="image">
							<left>-20</left>
							<top>10</top>
							<width>85</width>
							<height>80</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">oscars.png</texture>
							<visible>Skin.HasSetting(oscars504) + [SubString(ListItem.FileName,.oscars) | StringCompare(Container.FolderPath,special://profile/playlists/video/BestPicture.xsp)]</visible>
						</control>
						<control type="image">
							<visible>![Window.IsActive(pictures) | Container.Content(artists)]</visible>
							<left>1048</left>
							<top>8</top>
							<width>80</width>
							<height>80</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
						</control>
						<control type="image">
							<visible>![Window.IsActive(pictures) | Container.Content(artists)]</visible>
							<left>0</left>
							<top>420</top>
							<width>1125</width>
							<height>168</height>
							<aspectratio align="center">keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
							<animation effect="zoom" start="100" end="173" time="200" center="528,308" tween="Cubic" condition="Control.HasFocus(8000) + !IsEmpty(ListItem.Title)">Conditional</animation>
						</control>
						<control type="image">
							<visible>Window.IsActive(pictures)</visible>
							<width>1125</width>
							<height>633</height>
							<texture background="true">$INFO[ListItem.PicturePath]</texture>
							<aspectratio align="center" aligny="center">keep</aspectratio>
							<colordiffuse>BAffffff</colordiffuse>
							<fadetime>400</fadetime>
							<bordertexture border="8">thumbs/thumbnail_focused.png</bordertexture>
							<bordersize>8</bordersize>
						</control>
					</control>
				</focusedlayout>
			</control>
		</control>
		<control type="textbox">
			<top>865</top>
			<left>400</left>
			<width>1070</width>
			<align>left</align>
			<height>200</height>
			<label>$VAR[VideoPlotVar]</label>
			<font>font14_textbox</font>
			<autoscroll time="2500" delay="3500" repeat="5000">true</autoscroll>
			<textcolor>white</textcolor>
			<pagecontrol>61</pagecontrol>
			<visible>Control.IsVisible(504)</visible>
			<visible>ListItem.IsCollection</visible>
		</control>
		<control type="scrollbar" id="61">
			<left>1500</left>
			<top>875</top>
			<width>14</width>
			<height>200</height>
			<onup>61</onup>
			<ondown>61</ondown>
			<onleft>504</onleft>
			<onright>504</onright>
			<texturesliderbackground border="1">-</texturesliderbackground>
			<texturesliderbar border="6,0,6,0">scrollbar/texturesliderbar_hor.png</texturesliderbar>
			<texturesliderbarfocus border="6,0,6,0">scrollbar/texturesliderbarfocus_hor.png</texturesliderbarfocus>
			<textureslidernib>-</textureslidernib>
			<textureslidernibfocus>-</textureslidernibfocus>
			<showonepage>false</showonepage>
			<animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(61) + !Container.Scrolling">Conditional</animation>
			<visible>Control.IsVisible(504) + ListItem.IsCollection</visible>
		</control>
	</include>
</includes>