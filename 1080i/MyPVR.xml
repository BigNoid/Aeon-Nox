                <posy>0</posy>
                <width>814</width>
                <height>458</height>
                <texture border="5">PVR/Border.png</texture>
            </control>
            <control type="image">
                <posx>5</posx>
                <posy>5</posy>
                <width>804</width>
                <height>448</height>
                <texture>$VAR[PVRThumbVar]</texture>
                <include>Animation_VisibleChange200</include>
                <visible>!Player.HasVideo</visible>
            </control>
            <control type="videowindow">
                <posx>5</posx>
                <posy>5</posy>
                <width>804</width>
                <height>448</height>
                <visible>Player.HasVideo</visible>
                <animation effect="slide" start="0,0" end="-3000,0" time="0">WindowClose</animation>
            </control>
        </control>
        <control type="group" id="50">
        	<posy>30</posy>
            <include>Animation_OpenCloseZoom_New</include>
            <!-- view id = 10 -->
            <include>EPGTimelineView</include>
            <!-- view id = 11+12 -->
            <include>LiveTVChannelView</include>
            <!-- view id = 13 -->
            <include>LiveTVRecordingsView</include>
            <!-- view id = 14 -->
            <include>LiveTVTimersView</include>
            <!-- view id = 15 -->
