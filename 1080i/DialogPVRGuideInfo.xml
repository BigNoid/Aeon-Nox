<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="true">7</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>320</posx>
        <posy>0</posy>
    </coordinates>
    <include>Animation_DialogPopup</include>
    <include>Animation_DialogZoom</include>
    <include condition="Skin.HasSetting(effect_bg)">BG_Effect_Home</include>
    <controls>
        <control type="group">
            <posy>135</posy>
            <control type="image">
                <posx>0</posx>
                <width>1246</width>
                <height>722</height>
                <texture>osd/osd_settings_back_glow.png</texture>
                <colordiffuse>$VAR[ColorDiffuseVar]</colordiffuse>
                <visible>!Skin.HasSetting(DisableGlowbar)</visible>
                <include>PanelGlowFade</include>
                <include>Animation_VisibleChange400</include>
                <include>PanelGlowFade</include>
            </control>
            <control type="image">
                <posx>0</posx>
                <colordiffuse>$VAR[DialogColorVar]</colordiffuse>
                <width>1246</width>
                <height>722</height>
                <texture>osd/osd_settings_back.png</texture>
            </control>
            <control type="label">
                <posx>22</posx>
                <posy>30</posy>
                <width>1200</width>
                <height>45</height>
                <label>$LOCALIZE[52016]</label>
                <align>center</align>
                <font>Font_Reg24</font>
            </control>
            <control type="image">
                <posx>10</posx>
                <posy>35</posy>
                <width>1226</width>
                <height>50</height>
                <texture>osd/osd_settings_buttonnf.png</texture>
            </control>
            <control type="image">
                <posx>40</posx>
                <posy>75</posy>
                <height>290</height>
                <width>290</width>
                <texture fallback="DefaultVideo.png">$INFO[ListItem.Icon]</texture>
                <bordersize>10</bordersize>
                <aspectratio>keep</aspectratio>
            </control>
            <control type="group">
                <posx>350</posx>
                <posy>100</posy>
                <control type="fadelabel">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>830</width>
                    <height>35</height>
                    <font>Font_Bold24</font>
                    <scroll>true</scroll>
                    <label>$INFO[ListItem.Title]</label>
                </control>
                <control type="label">
                    <posx>0</posx>
                    <posy>45</posy>
                    <height>38</height>
                    <width>830</width>
                    <label>$INFO[ListItem.ChannelName]</label>
                    <font>Font_Reg21</font>
                    <textcolor>$VAR[FontColorVar]</textcolor>
                    <scroll>true</scroll>
                </control>
                <control type="label">
                    <posx>0</posx>
                    <posy>80</posy>
                    <height>45</height>
                    <width>830</width>
                    <label fallback="161">$INFO[ListItem.Genre]</label>
                    <font>Font_Reg19</font>
                    <scroll>true</scroll>
                </control>
                <control type="label">
                    <posx>0</posx>
                    <posy>115</posy>
                    <width>830</width>
                    <height>45</height>
                    <font>Font_Reg19</font>
                    <textcolor>grey</textcolor>
                    <label>$INFO[ListItem.StartTime] - $INFO[ListItem.EndTime] ($LOCALIZE[52017]: $INFO[ListItem.Duration])</label>
                </control>
                <control type="textbox" id="400">
                    <posx>0</posx>
                    <posy>170</posy>
                    <width>830</width>
                    <height>330</height>
                    <label>$INFO[ListItem.Plot]</label>
                    <font>Font_Reg20</font>
                    <autoscroll delay="8000" time="5000" repeat="8000">Skin.HasSetting(AutoScroll)</autoscroll>
                </control>
            </control>
            <control type="grouplist" id="9000">
                <posx>22</posx>
                <posy>630</posy>
                <width>1226</width>
                <height>60</height>
                <itemgap>8</itemgap>
                <align>center</align>
                <orientation>horizontal</orientation>
                <onleft>9000</onleft>
                <onright>9000</onright>
                <onup>60</onup>
                <ondown>60</ondown>
                <control type="button" id="5">
                    <width>300</width>
                    <height>52</height>
                    <colordiffuse>$VAR[ColorDiffuseVar]</colordiffuse>
                    <align>center</align>
                    <label>19165</label>
                </control>
                <control type="button" id="6">
                    <width>300</width>
                    <height>52</height>
                    <colordiffuse>$VAR[ColorDiffuseVar]</colordiffuse>
                    <align>center</align>
                    <label>-</label>
                </control>
                <control type="button" id="7">
                    <width>300</width>
                    <height>52</height>
                    <colordiffuse>$VAR[ColorDiffuseVar]</colordiffuse>
                    <align>center</align>
                    <label>186</label>
                </control>
            </control>
        </control>
    </controls>
</window>