<?xml version="1.0" encoding="utf-8"?>
<window id="601">
    <defaultcontrol always="true">7</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>120</posx>
        <posy>45</posy>
        <origin x="300" y="30">![Window.IsVisible(FullscreenVideo) | Window.IsVisible(Visualisation)]</origin>
    </coordinates>
    <include>Animation_DialogPopup</include>
    <include>Animation_DialogZoom</include>
    <include condition="Skin.HasSetting(effect_bg)">BG_Effect_Home</include>
    <controls>
        <control type="group">
            <control type="image">
                <description>Panel</description>
                <posx>-112</posx>
                <posy>135</posy>
                <width>1246</width>
                <height>722</height>
                <texture>osd/osd_settings_back_glow.png</texture>
                <colordiffuse>$VAR[ColorDiffuseVar]</colordiffuse>
                <visible>!Skin.HasSetting(DisableGlowbar)</visible>
                <include>PanelGlowFade</include>
                <include>Animation_VisibleChange400</include>
                <include>PanelGlowFade</include>
            </control>
            <control type="image">
                <description>Panel</description>
                <posx>-112</posx>
                <colordiffuse>$VAR[DialogColorVar]</colordiffuse>
                <posy>135</posy>
                <width>1246</width>
                <height>722</height>
                <texture>osd/osd_settings_back.png</texture>
            </control>
            <control type="label">
                <description>header label</description>
                <posx>22</posx>
                <posy>168</posy>
                <width>975</width>
                <height>45</height>
                <label>$LOCALIZE[52016]</label>
                <align>center</align>
                <aligny>center</aligny>
                <font>Font_Reg24</font>
            </control>
            <control type="image">
                <posx>-75</posx>
                <posy>165</posy>
                <width>1172</width>
                <height>60</height>
                <texture>osd/osd_settings_buttonnf.png</texture>
            </control>
            <control type="fadelabel">
                <description>Channel Value</description>
                <posx>300</posx>
                <posy>266</posy>
                <width>705</width>
                <height>38</height>
                <align>left</align>
                <aligny>center</aligny>
                <font>Font_Reg24</font>
                <textcolor>white</textcolor>
                <shadowcolor>-</shadowcolor>
                <scroll>true</scroll>
                <label>[B]$INFO[ListItem.ChannelName][/B]</label>
            </control>
            <control type="label">
                <description>Title label</description>
                <posx>300</posx>
                <posy>300</posy>
                <height>45</height>
                <width>750</width>
                <label>$INFO[ListItem.Title]</label>
                <align>left</align>
                <aligny>center</aligny>
                <font>Font_Reg22_Caps</font>
                <textcolor>white2</textcolor>
                <shadowcolor>-</shadowcolor>
                <scroll>true</scroll>
            </control>
            <control type="group">
                <control type="group">
                    <posx>22</posx>
                    <posy>180</posy>
                    <control type="label">
                        <description>Duration value</description>
                        <posx>278</posx>
                        <posy>180</posy>
                        <width>705</width>
                        <height>38</height>
                        <align>left</align>
                        <aligny>center</aligny>
                        <font>Font_Reg18</font>
                        <textcolor>osdseek</textcolor>
                        <label>$INFO[ListItem.StartTime] - $INFO[ListItem.EndTime] ($LOCALIZE[52017]: $INFO[ListItem.Duration])</label>
                    </control>
                    <control type="label">
                        <description>Genre value</description>
                        <posx>278</posx>
                        <posy>225</posy>
                        <width>705</width>
                        <label fallback="161">$INFO[ListItem.Genre]</label>
                        <align>left</align>
                        <aligny>center</aligny>
                        <font>Font_Reg18</font>
                        <textcolor>grey2</textcolor>
                        <shadowcolor>-</shadowcolor>
                        <scroll>true</scroll>
                    </control>
                    <control type="image">
                        <description>Cover Image</description>
                        <posx>-90</posx>
                        <posy>45</posy>
                        <height>519</height>
                        <width>345</width>
                        <texture background="true" fallback="DefaultVideo.png">$INFO[ListItem.Icon]</texture>
                        <bordersize>10</bordersize>
                        <aspectratio>keep</aspectratio>
                    </control>
                </control>
                <control type="textbox" id="400">
                    <posx>300</posx>
                    <posy>428</posy>
                    <width>780</width>
                    <height>285</height>
                    <font>Font_Reg18</font>
                    <label>$INFO[ListItem.Plot]</label>
                    <textcolor>white2</textcolor>
                    <align>justify</align>
                    <autoscroll delay="8000" time="5000" repeat="8000">Skin.HasSetting(AutoScroll)</autoscroll>
                </control>
                <control type="grouplist" id="9000">
                    <posx>22</posx>
                    <posy>758</posy>
                    <width>960</width>
                    <height>60</height>
                    <itemgap>8</itemgap>
                    <align>center</align>
                    <orientation>horizontal</orientation>
                    <onleft>9000</onleft>
                    <onright>9000</onright>
                    <onup>60</onup>
                    <ondown>60</ondown>
                    <control type="button" id="5">
                        <description>Switch to Channel</description>
                        <width>300</width>
                        <height>52</height>
                        <colordiffuse>$VAR[ColorDiffuseVar]</colordiffuse>
                        <align>center</align>
                        <aligny>center</aligny>
                        <label>19165</label>
                    </control>
                    <control type="button" id="6">
                        <description>Record</description>
                        <width>300</width>
                        <height>52</height>
                        <colordiffuse>$VAR[ColorDiffuseVar]</colordiffuse>
                        <align>center</align>
                        <aligny>center</aligny>
                        <label>-</label>
                    </control>
                    <control type="button" id="7">
                        <description>OK</description>
                        <width>300</width>
                        <height>52</height>
                        <colordiffuse>$VAR[ColorDiffuseVar]</colordiffuse>
                        <align>center</align>
                        <aligny>center</aligny>
                        <label>186</label>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>