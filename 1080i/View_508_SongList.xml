<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Video Episode -->
	<include name="View_508_SongList">
		<control type="group">
			<visible>Control.IsVisible(508) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<control type="group">
				<left>0</left>
				<top>0</top>
				<control type="list" id="508">
					<left>310</left>
					<top>75</top>
					<width>1300</width>
					<height>980</height>
					<orientation>vertical</orientation>
					<movement>2</movement>
					<focusposition>1</focusposition>
					<onleft>SetProperty(MediaMenu,True,home)</onleft>
					<onleft>SetFocus(9050)</onleft>
					<onright>60</onright>
					<onup>508</onup>
					<ondown>508</ondown>
					<pagecontrol>60</pagecontrol>
					<viewtype label="SongList">list</viewtype>
					<scrolltime tween="quadratic" easing="out">200</scrolltime>
					<visible>Container.Content(songs)</visible>
					<animation effect="slide" end="0,0" time="160" condition="Container(508).Row(0)">Conditional</animation>
					<animation effect="slide" end="0,0" time="160" condition="Container(508).Row(1)">Conditional</animation>
					<animation effect="slide" end="0,0" time="160" condition="Container(508).Row(2)">Conditional</animation>
					<animation effect="slide" end="0,0" time="160" condition="Container(508).Row(3)">Conditional</animation>
					<animation effect="slide" end="0,0" time="160" condition="Container(508).Row(4)">Conditional</animation>
					<animation effect="slide" end="0,0" time="160" condition="Container(508).Row(5)">Conditional</animation>
					<itemlayout height="100" width="1300" condition="Container.Content(songs)">
						<control type="label">
							<top>15</top>
							<left>275</left>
							<width>1000</width>
							<height>70</height>
							<font>font30</font>
							<textcolor>grey</textcolor>
							<selectedcolor>selected</selectedcolor>
							<align>left</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.TrackNumber]. $INFO[ListItem.Title]</label>
						</control>
					</itemlayout>
					<focusedlayout height="275" width="1300" condition="Container.Content(songs)">
						<control type="image">
							<top>0</top>
							<width>1300</width>
							<height>275</height>
							<texture>listselect_fo.png</texture>
						</control>
						<control type="image">
							<left>15</left>
							<top>15</top>
							<width>245</width>
							<height>245</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<fadetime>IconCrossfadeTime</fadetime>
						</control>
						<control type="label">
							<left>275</left>
							<top>0</top>
							<width>1000</width>
							<height>70</height>
							<font>font30</font>
							<textcolor>white</textcolor>
							<selectedcolor>selected</selectedcolor>
							<align>left</align>
							<aligny>center</aligny>
							<label>[B]$INFO[ListItem.TrackNumber]. $INFO[ListItem.Title][/B]</label>
							<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(508)">Conditional</animation>
						</control>
						<control type="label">
							<left>275</left>
							<top>55</top>
							<width>990</width>
							<height>70</height>
							<font>font16_title</font>
							<textcolor>themecolor</textcolor>
							<selectedcolor>selected</selectedcolor>
							<align>left</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Artist]</label>
							<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(508)">Conditional</animation>
						</control>
						<control type="label">
							<left>275</left>
							<top>105</top>
							<width>990</width>
							<height>70</height>
							<font>font16</font>
							<textcolor>white</textcolor>
							<selectedcolor>selected</selectedcolor>
							<align>left</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Album] $INFO[ListItem.Year,[,]]</label>
							<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(508)">Conditional</animation>
						</control>
						<control type="label">
							<left>275</left>
							<top>135</top>
							<width>990</width>
							<height>110</height>
							<font>font16</font>
							<textcolor>white</textcolor>
							<selectedcolor>selected</selectedcolor>
							<align>left</align>
							<aligny>center</aligny>
							<label fallback="• • • •">$VAR[MusicListLabel4Var]</label>
							<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(508)">Conditional</animation>
						</control>
						<control type="image">
							<left>175</left>
							<top>220</top>
							<width>400</width>
							<height>45</height>
							<colordiffuse>grey</colordiffuse>
							<aspectratio>keep</aspectratio>
							<texture colordiffuse="themecolor" fallback="rating0.png">$INFO[ListItem.StarRating]</texture>
						</control>
						<!--
						<control type="image">
							<left>1125</left>
							<top>185</top>
							<width>198</width>
							<include>MediaFlagVars</include>
							<texture colordiffuse="grey">$INFO[ListItem.FileExtension,flags/audio/,.png]</texture>
						</control>
						-->
					</focusedlayout>
				</control>
				<control type="scrollbar" id="60">
					<left>1890</left>
					<top>200</top>
					<width>14</width>
					<height>780</height>
					<onup>60</onup>
					<ondown>60</ondown>
					<onleft>508</onleft>
					<onright>SetProperty(MediaMenu,True,home)</onright>
					<onright>SetFocus(9050)</onright>
					<texturesliderbackground>-</texturesliderbackground>
					<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
					<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
					<showonepage>false</showonepage>
					<orientation>vertical</orientation>
					<animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
				</control>
			</control>
		</control>
	</include>
</includes>