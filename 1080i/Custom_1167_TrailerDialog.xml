<?xml version="1.0" encoding="utf-8"?>
<window type="dialog" id="1167">
    <defaultcontrol always="true">500</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <onunload>PlayerControl(Stop)</onunload>
    <controls>
            <control type="button" id="500">
                <include>HiddenObject</include>
                <onfocus>SetFocus(500)</onfocus>
                <onleft>PlayerControl(BigSkipBackward)</onleft>
                <onright>PlayerControl(BigSkipForward)</onright>
                <visible>Player.HasMedia</visible>
            </control>
            <control type="button" id="500">
                <include>HiddenObject</include>
                <onfocus>Dialog.Close(1167)</onfocus>
                <onleft>PlayerControl(BigSkipBackward)</onleft>
                <onright>PlayerControl(BigSkipForward)</onright>
                <visible>!Player.HasMedia</visible>
            </control>
            <control type="image">
                <texture>common/black.png</texture>
                <animation effect="fade" time="800">WindowOpen</animation>
                <animation effect="fade" time="600">WindowClose</animation>
                <include>FullscreenDimensions</include>
                <colordiffuse>FF000000</colordiffuse>
            </control>
            <control type="videowindow">
                <animation effect="fade" delay="800" time="0">WindowOpen</animation>
                <include>FullscreenDimensions</include>
                <visible>Player.HasVideo</visible>
            </control>
    </controls>
</window>