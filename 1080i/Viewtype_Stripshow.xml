<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="PictureInfo">
        <control type="image">
            <posx>30</posx>
            <posy>699</posy>
            <width>28</width>
            <height>332</height>
            <texture flipx="true">views/stripshow_arrow.png</texture>
            <animation effect="slide" start="-150" end="0" delay="640" time="320" tween="cubic">WindowOpen</animation>
            <include>Animation_CommonFade</include>
            <visible>!Skin.HasSetting(StripshowWS)</visible>
        </control>
        <control type="image">
            <posx>1862</posx>
            <posy>699</posy>
            <width>28</width>
            <height>332</height>
            <texture>views/stripshow_arrow.png</texture>
            <animation effect="slide" start="150" end="0" delay="640" time="320" tween="cubic">WindowOpen</animation>
            <include>Animation_CommonFade</include>
            <visible>!Skin.HasSetting(StripshowWS)</visible>
        </control>
        <control type="group">
            <posy>990</posy>
            <visible>!ListItem.IsFolder</visible>
            <control type="label">
                <posx>1890</posx>
                <width>930</width>
                <height>57</height>
                <align>right</align>
                <label fallback="31006">$INFO[ListItem.PictureResolution,[COLOR white3]$LOCALIZE[21805]: [/COLOR]]</label>
                <font>Font_Reg28</font>
            </control>
            <control type="label">
                <posx>1890</posx>
                <posy>30</posy>
                <width>930</width>
                <height>57</height>
                <align>right</align>
                <label fallback="31006">$INFO[ListItem.PictureDateTime,[COLOR white3]$LOCALIZE[21803]: [/COLOR]]</label>
                <font>Font_Reg28</font>
            </control>
            <control type="label">
                <posx>30</posx>
                <width>930</width>
                <height>57</height>
                <label fallback="31006">$INFO[ListItem.Label,[COLOR white3]$LOCALIZE[21800]: [/COLOR]]</label>
                <font>Font_Reg28</font>
            </control>
            <control type="label">
                <posx>30</posx>
                <posy>30</posy>
                <width>930</width>
                <height>57</height>
                <label fallback="31006">$INFO[ListItem.Size,[COLOR white3]$LOCALIZE[21802]: [/COLOR]]</label>
                <font>Font_Reg28</font>
            </control>
        </control>
        <control type="group">
            <posy>990</posy>
            <visible>ListItem.IsFolder</visible>
            <control type="label">
                <posx>30</posx>
                <width>930</width>
                <height>57</height>
                <label fallback="31006">$INFO[ListItem.Label]</label>
                <font>Font_Reg28</font>
            </control>
        </control>
    </include>
    <include name="PictureListContent">
        <posx>90</posx>
        <posy>741</posy>
        <width>1736</width>
        <height>254</height>
        <focusposition>4</focusposition>
        <itemlayout width="194" height="194">
            <control type="image">
                <posy>30</posy>
                <width>194</width>
                <height>194</height>
                <aspectratio scalediffuse="false">scale</aspectratio>
                <texture>DefaultPicture.png</texture>
                <info>ListItemNoWrap.Icon</info>
                <animation effect="fade" end="100" time="160">Visible</animation>
            </control>
        </itemlayout>
        <focusedlayout width="194" height="194">
            <control type="image">
                <posx>-7</posx>
                <posy>23</posy>
                <width>208</width>
                <height>208</height>
                <aspectratio scalediffuse="false">scale</aspectratio>
                <texture>DefaultPicture.png</texture>
                <info>ListItemNoWrap.Icon</info>
                <bordertexture border="7">thumbs/bordershadow2.png</bordertexture>
                <bordersize>7</bordersize>
                <animation effect="fade" end="100" time="160">Visible</animation>
                <animation effect="zoom" center="auto" start="100" end="120" time="320" tween="cubic" reversible="false">Focus</animation>
            </control>
        </focusedlayout>
    </include>
    <include name="StripshowTVThumbsVars">
        <posx>-3</posx>
        <posy>-1</posy>
        <width>246</width>
        <height>148</height>
        <aspectratio scalediffuse="false">scale</aspectratio>
        <bordersize>9</bordersize>
    </include>
    <include name="StripshowTVThumbs">
        <control type="group">
            <posx>-75</posx>
            <visible>Skin.HasSetting(StripshowWS)</visible>
            <control type="image">
                <texture diffuse="thumbs/multiplex_tvmask.png">DefaultPicture.png</texture>
                <include>StripshowTVThumbsVars</include>
                <bordertexture border="9">thumbs/multiplex_tvborder.png</bordertexture>
                <info>ListItem.Icon</info>
            </control>
            <control type="image">
                <texture diffuse="thumbs/multiplex_tvmask.png">thumbs/multiplex_tv_glass.png</texture>
                <include>StripshowTVThumbsVars</include>
            </control>
        </control>
    </include>
    <include name="VideoListContent">
        <posx>-45</posx>
        <posy>840</posy>
        <width>2100</width>
        <height>225</height>
        <focusposition>4</focusposition>
        <itemlayout width="240" height="225">
            <include>StripshowTVThumbs</include>
        </itemlayout>
        <focusedlayout width="240" height="225">
            <control type="group">
                <animation effect="zoom" center="45,75" start="100" end="155" time="320" tween="cubic" reversible="false">Focus</animation>
                <animation effect="zoom" center="45,75" start="155" end="100" time="160" tween="cubic" reversible="false">UnFocus</animation>
                <include>StripshowTVThumbs</include>
            </control>
        </focusedlayout>
    </include>
    <include name="Stripshow">
        <control type="group">
            <visible>Control.IsVisible(517)</visible>
            <animation effect="fade" time="200">WindowOpen</animation>
            <animation effect="fade" time="200">WindowClose</animation>
            <include>Animation_HideStripShow</include>
            <control type="scrollbar" id="60">
                <posy>992</posy>
                <width>1920</width>
                <height>88</height>
                <animation effect="fade" start="100" end="0" time="320" condition="!Control.HasFocus(60)">Conditional</animation>
                <include>Animation_HideStripShow</include>
                <texturesliderbackground>osd/osd_progress_clear.png</texturesliderbackground>
                <texturesliderbar>osd/osd_progress_clear.png</texturesliderbar>
                <texturesliderbarfocus>osd/osd_progressmid.png</texturesliderbarfocus>
                <textureslidernib>-</textureslidernib>
                <textureslidernibfocus>-</textureslidernibfocus>
                <onup>517</onup>
                <ondown>109</ondown>
                <orientation>horizontal</orientation>
            </control>
            <control type="image">
                <texture>views/stripshow_background.png</texture>
                <include>FullscreenDimensions</include>
                <visible>!Skin.HasSetting(StripshowWS)</visible>
            </control>
            <control type="image">
                <texture>views/stripshow_background_tvshows.png</texture>
                <include>FullscreenDimensions</include>
                <visible>Skin.HasSetting(StripshowWS)</visible>
            </control>
            <include condition="Window.IsActive(pictures)">PictureInfo</include>
            <control type="wraplist" id="517">
                <viewtype label="31380">bigwrap</viewtype>
                <pagecontrol>60</pagecontrol>
                <scrolltime tween="quadratic">300</scrolltime>
                <onleft>517</onleft>
                <onright>517</onright>
                <onup>9000</onup>
                <ondown>60</ondown>
                <orientation>horizontal</orientation>
                <include condition="!Skin.HasSetting(StripshowWS)">PictureListContent</include>
                <include condition="Skin.HasSetting(StripshowWS)">VideoListContent</include>
            </control>
            <control type="button" id="109">
                <include>HiddenObject</include>
                <onleft>517</onleft>
                <onright>517</onright>
                <onup>517</onup>
                <ondown>517</ondown>
                <onclick>SlideShow($INFO[ListItem.Path],notrandom)</onclick>
            </control>
        </control>
    </include>
</includes>