<includes>
  <include name="BigFan">
    <control type="group">
      <visible>Control.IsVisible(516)</visible>
      <control type="wraplist" id="516">
        <viewtype label="$LOCALIZE[31291]">list</viewtype>
        <posx>0</posx>
        <posy>0</posy>
        <width>1920</width>
        <height>1080</height>
        <onleft>516</onleft>
        <onright>516</onright>
        <onup condition="!IsEmpty(ListItem.Trailer)">1801</onup>
        <onup condition="IsEmpty(ListItem.Trailer)">9000</onup>
        <ondown>71</ondown>
        <viewtype label="BigFan">bigwrap</viewtype>
        <pagecontrol>71</pagecontrol>
        <scrolltime tween="quadratic" easing="out">500</scrolltime>
        <focusposition>0</focusposition>
        <orientation>horizontal</orientation>
        <preloaditems>6</preloaditems>
        <visible>Window.IsActive(videos) + [Container.Content(seasons) | Container.Content(movies) | Container.Content(tvshows) | Container.Content(genres)]</visible>
        <itemlayout height="1080" width="1920">
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <aspectratio>stretch</aspectratio>
            <fadetime>350</fadetime>
            <texture background="true" fallback="special://skin/backgrounds/fallback_movies.jpg">$VAR[BigFanListVar]</texture>
          </control>
        </itemlayout>
        <focusedlayout height="1080" width="1920">
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <aspectratio>stretch</aspectratio>
            <fadetime>350</fadetime>
            <texture background="true" fallback="special://skin/backgrounds/fallback_movies.jpg">$VAR[BigFanListVar]</texture>
          </control>
        </focusedlayout>
      </control>
    </control>
  </include>
  <include name="BigFanFurniture">
    <control type="group">
      <visible>Control.IsVisible(516)</visible>
      <animation type="Visible">
        <effect type="fade" time="400" start="0" end="100" />
        <effect type="slide" time="400" start="0,135" end="0,0" easing="out" tween="cubic" />
      </animation>
      <animation type="Hidden">
        <effect type="fade" time="400" start="100" end="0" />
        <effect type="slide" time="400" start="0,0" end="0,135" easing="in" tween="cubic" />
      </animation>
      <animation type="WindowOpen">
        <effect type="fade" time="400" start="0" end="100" />
        <effect type="slide" time="400" start="0,135" end="0,0" easing="out" tween="cubic" />
      </animation>
      <animation type="WindowClose">
        <effect type="fade" time="300" start="100" end="0" />
        <effect type="slide" time="300" start="0,0" end="0,135" easing="in" tween="cubic" />
      </animation>
      <control type="scrollbar" id="71">
        <posx>0</posx>
        <posy>174r</posy>
        <width>1920</width>
        <height>188</height>
        <animation effect="fade" start="100" end="0" time="400" condition="Control.HasFocus(516) | ControlGroup(9000).HasFocus | Control.HasFocus(7001)">Conditional</animation>
        <texturesliderbackground>osd/osd_progress_clear.png</texturesliderbackground>
        <texturesliderbar>osd/osd_progress_clear.png</texturesliderbar>
        <texturesliderbarfocus>osd/osd_progressmid.png</texturesliderbarfocus>
        <textureslidernib>views/scrollBarNib.png</textureslidernib>
        <textureslidernibfocus>views/scrollBarNib.png</textureslidernibfocus>
        <pulseonselect>yes</pulseonselect>
        <onup>516</onup>
		<ondown>9000</ondown>
        <showonepage>true</showonepage>
        <orientation>horizontal</orientation>
      </control>
      <control type="image">
        <description>osd bar bottom</description>
        <posx>0</posx>
        <posy>188r</posy>
        <width>1920</width>
        <height>188</height>
        <texture>osd/osd_back.png</texture>
      </control>
      <control type="group">
        <posy>860</posy>
        <include>Neon_Topbar</include>  
      </control>
      <control type="image">
        <posx>22</posx>
        <posy>128r</posy>
        <width>51</width>
        <height>51</height>
        <aspectratio>keep</aspectratio>
        <texture>views/multiplex_arrow2.png</texture>
        <animation effect="fade" time="400" delay="50">Visible</animation>
        <visible>!Container(516).OnPrevious</visible>
      </control>
      <control type="image">
        <posx>22</posx>
        <posy>128r</posy>
        <width>50</width>
        <height>56</height>
        <aspectratio>keep</aspectratio>
        <texture>views/multiplex_arrowfocus2.png</texture>
        <visible>Container(516).OnPrevious</visible>
      </control>
      <control type="image">
        <posx>74r</posx>
        <posy>128r</posy>
        <width>50</width>
        <height>56</height>
        <aspectratio>keep</aspectratio>
        <texture>views/multiplex_arrow.png</texture>
        <visible>!Container(516).OnNext</visible>
        <animation effect="fade" time="400" delay="50">Visible</animation>
      </control>
      <control type="image">
        <posx>74r</posx>
        <posy>128r</posy>
        <width>50</width>
        <height>56</height>
        <aspectratio>keep</aspectratio>
        <texture>views/multiplex_arrowfocus.png</texture>
        <visible>Container(516).OnNext</visible>
      </control>
      <control type="group">
        <posx>-54</posx>
        <posy>588</posy>
        <visible>!Skin.HasSetting(bigfanlogo) | Container.Content(genres)</visible>
        <control type="image">
          <posx>164</posx>
          <posy>166</posy>
          <width>204</width>
          <height>303</height>
          <fadetime>275</fadetime>
          <aspectratio scalediffuse="false">stretch</aspectratio>
          <texture background="true" diffuse="thumbs/movieposter_mask.png" fallback="DefaultVideoBigPoster.png">$VAR[ListPosterVar]</texture>
        </control>
        <control type="image">
          <posx>144</posx>
          <posy>146</posy>
          <width>243</width>
          <height>342</height>
          <fadetime>275</fadetime>
          <aspectratio scalediffuse="false">stretch</aspectratio>
          <texture diffuse="thumbs/movieposter_mask.png">thumbs/thumb_glass_noreflect.png</texture>
          <bordertexture border="19.5">thumbs/poster_shadow.png</bordertexture>
          <bordersize>19</bordersize>
        </control>
        <control type="image">
          <posx>308</posx>
          <posy>166</posy>
          <width>60</width>
          <height>60</height>
          <fadetime>IconCrossfadeTime2</fadetime>
          <include>OverlayVisibility0</include>
        </control>
      </control>
      <control type="group">
        <visible>Skin.HasSetting(bigfanlogo) + !Container.Content(genres)</visible>
        <control type="image">
          <posx>75</posx>
          <posy>945</posy>
          <width>270</width>
          <height>105</height>
          <texture background="true">$VAR[TVShowLogoVar]</texture>
          <fadetime>300</fadetime>
          <aspectratio align="bottom">keep</aspectratio>
          <animation effect="fade" start="100" end="0" time="200">Hidden</animation>
          <animation effect="fade" start="0" end="100" time="400">Visible</animation>
        </control>
      </control>
      <control type="label">
        <posx>352</posx>
        <posy>159r</posy>
        <width>1500</width>
        <height>38</height>
        <font>Font_ShowcaseMainLabel2_Caps</font>
        <align>left</align>
        <scroll>true</scroll>
        <textcolor>white6</textcolor>
        <label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
      </control>
      <control type="label">
        <posx>352</posx>
        <posy>98r</posy>
        <width>720</width>
        <height>52</height>
        <font>Font_Reg18</font>
        <align>left</align>
        <scroll>true</scroll>
        <textcolor>cccdcdcd</textcolor>
        <label>$INFO[ListItem.Genre]</label>
        <visible>!Container.Content(seasons)</visible>
      </control>
      <control type="label">
        <posx>352</posx>
        <posy>98r</posy>
        <width>720</width>
        <height>52</height>
        <font>Font_Reg18</font>
        <align>left</align>
        <scroll>true</scroll>
        <textcolor>cccdcdcd</textcolor>
        <label>$INFO[ListItem.TvShowTitle]</label>
        <visible>Container.Content(seasons)</visible>
      </control>
      <control type="label">
        <posx>352</posx>
        <posy>60r</posy>
        <width>1500</width>
        <height>52</height>
        <font>Font_Reg18</font>
        <align>left</align>
        <scroll>true</scroll>
        <textcolor>cccdcdcd</textcolor>
        <label>$INFO[ListItem.Year]$INFO[ListItem.Duration, • , $LOCALIZE[12391]]$INFO[ListItem.RatingAndVotes, • ]</label>
        <visible>Container.Content(movies)</visible>
      </control>
      <control type="label">
        <posx>352</posx>
        <posy>60r</posy>
        <width>1500</width>
        <height>52</height>
        <font>Font_Reg18</font>
        <align>left</align>
        <scroll>true</scroll>
        <textcolor>cccdcdcd</textcolor>
        <label>$INFO[ListItem.Label2] [LOWERCASE]$INFO[ListItem.Property(UnWatchedEpisodes),($LOCALIZE[16101]: ,)][/LOWERCASE]</label>
        <visible>Container.Content(tvshows)</visible>
      </control>
      <control type="label">
        <posx>352</posx>
        <posy>60r</posy>
        <width>1500</width>
        <height>52</height>
        <font>Font_Reg18</font>
        <align>left</align>
        <scroll>true</scroll>
        <textcolor>cccdcdcd</textcolor>
        <label>$INFO[ListItem.Property(TotalEpisodes),, $LOCALIZE[20360]]$INFO[ListItem.Property(UnWatchedEpisodes), ($LOCALIZE[16101]: ,)]</label>
        <visible>Container.Content(seasons)</visible>
      </control>
    </control>
  </include>
</includes>