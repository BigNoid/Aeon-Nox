<?xml version="1.0" encoding="utf-8"?>
<window id="1">
    <defaultcontrol always="true">50</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <views>50,52,53,57,500,509,501,504,505,511,512,560</views>
    <include condition="!Skin.HasSetting(Nox.firstrun)">AutoConfig</include>
    <controls>
        <control type="multiimage">
            <animation effect="zoom" start="110" end="130" center="auto" time="15000" tween="linear" pulse="true" condition="Skin.HasSetting(Nox.animatedbg)">Conditional</animation>
            <animation effect="slide" start="-15,-15" end="15,15" time="7500" tween="linear" pulse="true" condition="Skin.HasSetting(Nox.animatedbg)">Conditional</animation>
            <imagepath fallback="special://skin/backgrounds/programs.jpg" background="true">$INFO[Skin.String(Nox.ProgramsHomeItem.MultiFanart)]</imagepath>
            <visible>IsEmpty(ListItem.property(fanart_image))</visible>
            <animation effect="fade" start="0" end="100" time="1000">Visible</animation>
        </control>
        <control type="image">
            <include>FullscreenDimensions</include>
            <texture>common/black.png</texture>
            <visible>IsEmpty(ListItem.property(fanart_image))</visible>
            <animation effect="fade" start="100" end="0" time="1000">Visible</animation>
        </control>
        <control type="image">
            <texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
            <include>CommonFanartVarsSingle</include>
        </control>
        <include>VideoBackground</include>
        <include>Furniture_Glow</include>
        <include>Furniture_Showcase</include>
        <include>WallPanel</include>
        <control type="image" id="199">
            <posx>0</posx>
            <posy>0</posy>
            <width>0</width>
            <height>0</height>
            <texture>-</texture>
            <visible>[!Container.OnNext + !Container.OnPrevious + [Window.IsActive(programs) + !Container.Content(addons)] + Skin.HasSetting(Nox.infopaneautolauncher)] | [!Skin.HasSetting(Nox.infopaneautolauncher) + [Window.IsActive(programs) + !Container.Content(addons)]]</visible>
            <include>DelayAnimations</include>
        </control>
        <control type="group">
            <visible>Control.IsVisible(501) | Control.IsVisible(509) | Control.IsVisible(504)</visible>
            <include>ShowcaseInfoPaneMusic</include>
        </control>
        <control type="group">
            <include>CommonRootView</include>
            <!-- view id = 50 -->
            <include>ShowcaseQuadrate</include>
            <!-- view id = 51 -->
            <include>Showcase</include>
            <!-- view id = 500 -->
            <include>AddonWall</include>
            <include>ShowcaseDVD</include>
            <include>Viewtype_Wall</include>
            <!-- view id = 500 -->
            <!-- view id = 550 -->
            <include>ShiftView</include>
            <!-- view id=57 -->
            <include>TriPanel</include>
            <include>TriPanelSquare</include>
            <include>LowList</include>
        </control>
        <control type="button" id="7000">
            <include>HiddenObject</include>
            <onfocus condition="Skin.HasSetting(Nox.infopaneautolauncher)">SetFocus(9000)</onfocus>
            <onup>9000</onup>
            <onleft condition="Control.IsVisible(509)">Control.Move(509,-1)</onleft>
            <onleft condition="Control.IsVisible(501)">Control.Move(501,-1)</onleft>
            <onleft condition="Control.IsVisible(504)">Control.Move(504,-1)</onleft>
            <onright condition="Control.IsVisible(509)">Control.Move(509,1)</onright>
            <onright condition="Control.IsVisible(501)">Control.Move(501,1)</onright>
            <onright condition="Control.IsVisible(504)">Control.Move(504,1)</onright>
            <onleft>50</onleft>
            <onright>50</onright>
            <ondown>50</ondown>
            <onback>50</onback>
        </control>
        <include>FloorLabels</include>
        <include>Furniture_DarkGradient</include>
        <control type="group">
            <description>Breadcrumbs</description>
            <include>Animation_HideBreadCrumbs</include>
            <include>Breadcrumbs_BackBar</include>
            <control type="group">
                <control type="grouplist">
                    <posx>22</posx>
                    <posy>0</posy>
                    <width>750</width>
                    <align>left</align>
                    <visible>Skin.HasSetting(Nox.breadcrumbslabel)</visible>
                    <visible>![Player.HasMedia + Skin.HasSetting(Nox.GlobalNowPlaying)]</visible>
                    <itemgap>0</itemgap>
                    <orientation>horizontal</orientation>
                    <control type="image">
                        <description>Items Icon</description>
                        <width>54</width>
                        <height>38</height>
                        <texture>common/logo_games.png</texture>
                        <include>BreadcrumbsIcon</include>
                        <animation effect="slide" start="0,0" end="-9,0" time="0" condition="true">Conditional</animation>
                    </control>
                    <control type="label">
                        <include>BreadcrumbsLabel</include>
                        <label>$LOCALIZE[10001]</label>
                    </control>
                    <control type="label">
                        <include>BreadcrumbsLabel</include>
                        <label>$INFO[Container.FolderName, / ]</label>
                        <include>BreadcrumbsLabel</include>
                    </control>
                </control>
            </control>
            <include>Breadcrumbs_Furniture</include>
        </control>
        <include>Furniture_NowPlayingWidget</include>
        <include>Media_Menu</include>
    </controls>
</window>