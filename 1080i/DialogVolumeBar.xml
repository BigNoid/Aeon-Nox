<window>
	<defaultcontrol>1</defaultcontrol>
	<coordinates>
		<system>0</system>
		<left>1000</left>
		<top>0</top>
	</coordinates>
	<animation effect="slide" start="0,-60" end="0,0" time="200">WindowOpen</animation>
	<animation effect="slide" start="0,0" end="0,-60" time="200">WindowClose</animation>
	<controls>
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>500</width>
			<height>70</height>
			<texture border="40,0,40,35">topbar2.png</texture>
			<visible>[Window.IsActive(fullscreenvideo) | Window.IsActive(visualisation) | Window.isActive(slideshow) | Window.IsActive(home)]</visible>
		</control>
		<control type="label">
			<left>30</left>
			<top>0</top>
			<label></label>
			<aligny>top</aligny>
			<textoffsety>1</textoffsety>
			<include>ButtonTopbarCommonvalues</include>
			<visible>!Player.Passthrough</visible>
		</control>
		<control type="label">
			<left>30</left>
			<top>0</top>
			<label></label>
			<aligny>top</aligny>
			<textoffsety>1</textoffsety>
			<include>ButtonTopbarCommonvalues</include>
			<visible>Player.Passthrough</visible>
		</control>
		<control type="label">
			<description>Line 1 Label</description>
			<top>0</top>
			<width>470</width>
			<height>40</height>
			<textoffsetx>15</textoffsetx>
			<font>font13_title</font>
			<textcolor>grey2</textcolor>
			<align>right</align>
			<aligny>top</aligny>
			<textoffsety>-4</textoffsety>
			<label>$INFO[Player.Volume]</label>
		</control>
		<control type="progress">
			<left>80</left>
			<top>0</top>
			<width>270</width>
			<height>37</height>
			<texturebg border="2">osd/texturebg2.png</texturebg>
			<lefttexture>-</lefttexture>
			<midtexture border="2">osd/midtexture.png</midtexture>
			<righttexture>-</righttexture>
			<overlaytexture>-</overlaytexture>
			<info>Player.Volume</info>
		</control>
	</controls>
</window>