<includes>
  <include name="nativeposters">
    <itemlayout height="161" width="831">
      <control type="group">
        <control type="image">
          <posx>0</posx>
          <posy>0</posy>
          <width>831</width>
          <height>161</height>
          <aspectratio align="center">stretch</aspectratio>
          <texture>common/black.png</texture>
          <bordersize>5</bordersize>
        </control>
        <control type="label">
          <posx>416</posx>
          <posy>8</posy>
          <width>816</width>
          <height>146</height>
          <aligny>center</aligny>
          <align>center</align>
          <textcolor>white</textcolor>
          <label>$INFO[ListItem.Label]</label>
          <font>Font_Bold24</font>
        </control>
        <control type="image">
          <posx>0</posx>
          <posy>0</posy>
          <width>831</width>
          <height>161</height>
          <aspectratio align="center">stretch</aspectratio>
          <texture background="true">$VAR[BannerVar]</texture>
          <bordertexture border="5">thumbs/thumbshadow.png</bordertexture>
          <bordersize>5</bordersize>
        </control>
        <control type="image">
          <posx>735</posx>
          <posy>6</posy>
          <width>90</width>
          <height>90</height>
          <include>OverlayVisibility0</include>
        </control>
        <control type="image">
          <posx>0</posx>
          <posy>0</posy>
          <width>831</width>
          <height>161</height>
          <aspectratio align="center">stretch</aspectratio>
          <texture>common/black.png</texture>
          <bordersize>5</bordersize>
          <colordiffuse>22FFFFFF</colordiffuse>
        </control>
      </control>
    </itemlayout>
    <focusedlayout height="161" width="831">
      <control type="group">
        <control type="image">
          <posx>0</posx>
          <posy>0</posy>
          <width>831</width>
          <height>161</height>
          <aspectratio align="center">stretch</aspectratio>
          <texture>common/black.png</texture>
          <bordertexture border="5">featured/tile_fo.png</bordertexture>
          <bordersize>5</bordersize>
        </control>
        <control type="label">
          <posx>416</posx>
          <posy>8</posy>
          <width>816</width>
          <height>146</height>
          <aligny>center</aligny>
          <align>center</align>
          <textcolor>white</textcolor>
          <label>$INFO[ListItem.Label]</label>
          <font>Font_Bold24</font>
        </control>
        <control type="image">
          <posx>0</posx>
          <posy>0</posy>
          <width>831</width>
          <height>161</height>
          <aspectratio align="center">stretch</aspectratio>
          <texture background="true">$VAR[BannerVar]</texture>
          <bordersize>5</bordersize>
        </control>
        <control type="image">
          <posx>735</posx>
          <posy>5</posy>
          <width>90</width>
          <height>90</height>
          <include>OverlayVisibility0</include>
        </control>
      </control>
    </focusedlayout>
  </include>
  <include name="BannerWallHor">
    <control type="image">
      <posx>86</posx>
      <posy>147</posy>
      <width>30</width>
      <height>786</height>
      <texture>wall/wall_arrow.png</texture>
      <visible>Control.IsVisible(51)</visible>
      <animation effect="slide" start="-150" end="0" delay="800" time="400" easing="out" tween="cubic">WindowOpen</animation>
    </control>
    <control type="image">
      <posx>1804</posx>
      <posy>147</posy>
      <width>30</width>
      <height>786</height>
      <texture flipx="true">wall/wall_arrow.png</texture>
      <visible>Control.IsVisible(51)</visible>
      <animation effect="slide" start="150" end="0" delay="800" time="400" easing="out" tween="cubic">WindowOpen</animation>
    </control>
    <control type="panel" id="51">
      <posx>129</posx>
      <posy>125</posy>
      <width>1662</width>
      <height>807</height>
      <onleft>51</onleft>
      <onright>51</onright>
      <onup>SetFocus(9000)</onup>
      <ondown>61</ondown>
      <visible>Container.Content(tvshows)</visible>
      <viewtype label="$LOCALIZE[31231]">Wide Icon</viewtype>
      <pagecontrol>61</pagecontrol>
      <scrolltime>300</scrolltime>
      <preloaditems>2</preloaditems>
      <orientation>horizontal</orientation>
      <include>nativeposters</include>
    </control>
  </include>
  <include name="BannerWallVert">
    <control type="panel" id="51">
      <posx>129</posx>
      <posy>125</posy>
      <width>1662</width>
      <height>807</height>
      <onleft>SetFocus(9000)</onleft>
      <onright>60</onright>
      <onup>51</onup>
      <ondown>51</ondown>
      <visible>Container.Content(tvshows)</visible>
      <viewtype label="$LOCALIZE[31231]">Wide Icon</viewtype>
      <pagecontrol>60</pagecontrol>
      <scrolltime>200</scrolltime>
      <preloaditems>2</preloaditems>
      <orientation>vertical</orientation>
      <include>nativeposters</include>
    </control>
    <control type="scrollbar" id="60">
      <posx>1815</posx>
      <posy>132</posy>
      <width>9</width>
      <height>802</height>
      <animation effect="fade" start="100" end="0" time="0" condition="!Control.HasFocus(60)">Conditional</animation>
      <include>CommonVerticalScrollbar</include>
      <onleft>51</onleft>
      <onright>51</onright>
    </control>
  </include>
  <include name="BannerWall">
    <control type="group">
      <visible>Control.IsVisible(51)</visible>
      <include>Animation_OpenCloseZoom_New</include>
      <include condition="!Skin.HasSetting(BannerwallVertical)">BannerWallHor</include>
      <include condition="Skin.HasSetting(BannerwallVertical)">BannerWallVert</include>
    </control>
  </include>
</includes>