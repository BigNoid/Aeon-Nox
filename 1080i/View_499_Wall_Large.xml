<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Video Icons2 -->
	<include name="Wall_Large">
		<control type="group">
			<visible>Control.IsVisible(499) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<top>-85</top>
			<control type="image">
				<description>background image</description>
				<left>130</left>
				<top>1137</top>
				<width>1725</width>
				<height>918</height>
				<texture border="40">panel_reflect.png</texture>
			</control>
			<control type="image">
				<description>background image</description>
				<left>97.5</left>
				<top>138</top>
				<width>1725</width>
				<height>918</height>
				<texture border="40">listpanel_back.png</texture>
			</control>
			<control type="panel" id="499">
				<left>127</left>
				<top>170</top>
				<width>1665</width>
				<height>855</height>
				<onright condition="Control.IsVisible(60)">60</onright>
				<onright condition="!Control.IsVisible(60)">SetProperty(MediaMenu,True,home)</onright>
				<onright condition="!Control.IsVisible(60)">SetFocus(9050)</onright>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onup>499</onup>
				<ondown>499</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="$LOCALIZE[1438] $LOCALIZE[536]">icons</viewtype>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<visible>Container.Content(tvshows) | Container.Content(movies)</visible>
				<itemlayout height="285" width="185">
					<control type="image">
						<width>185</width>
						<height>285</height>
						<aspectratio>stretch</aspectratio>
						<texture background="true">$VAR[PosterThumb]</texture>
						<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
						<bordersize>2</bordersize>
						<colordiffuse>BAffffff</colordiffuse>
					</control>
					<control type="image">
						<left>-20</left>
						<top>10</top>
						<width>85</width>
						<height>60</height>
						<aspectratio>keep</aspectratio>
						<texture background="true">oscars.png</texture>
						<visible>Skin.HasSetting(oscars499) + [SubString(ListItem.FileName,.oscars) | StringCompare(Container.FolderPath,special://profile/playlists/video/BestPicture.xsp)]</visible>
					</control>
					<control type="image">
						<left>110</left>
						<top>1</top>
						<width>85</width>
						<height>85</height>
						<texture>$VAR[OverlayVar]</texture>
						<aspectratio align="center" aligny="top">keep</aspectratio>
						<bordersize>1</bordersize>
						<visible>[!IsEmpty(Skin.String(499.Movies.DisableOverlay)) + Container.Content(movies)] | [!IsEmpty(Skin.String(499.TV.DisableOverlay)) + Container.Content(tvshows)]</visible>
					</control>
					<control type="group">
						<left>8</left>
						<top>8</top>
						<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
					</control>
				</itemlayout>
				<focusedlayout height="285" width="185">
					<control type="group">
						<animation effect="zoom" center="100,200" start="100" end="120" time="420" tween="back" reversible="false">Focus</animation>
						<control type="image">
							<width>185</width>
							<height>285</height>
							<aspectratio>stretch</aspectratio>
							<texture background="true">$VAR[PosterThumb]</texture>
							<bordertexture border="8">thumbs/thumbnail_focused.png</bordertexture>
							<bordersize>8</bordersize>
						</control>
						<control type="image">
							<left>-20</left>
							<top>10</top>
							<width>85</width>
							<height>60</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">oscars.png</texture>
							<visible>Skin.HasSetting(oscars499) + [SubString(ListItem.FileName,.oscars) | StringCompare(Container.FolderPath,special://profile/playlists/video/BestPicture.xsp)]</visible>
						</control>
						<control type="image">
							<left>105</left>
							<top>6</top>
							<width>85</width>
							<height>85</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<bordersize>2</bordersize>
							<visible>[!IsEmpty(Skin.String(499.Movies.DisableOverlay)) + Container.Content(movies)] | [!IsEmpty(Skin.String(499.TV.DisableOverlay)) + Container.Content(tvshows)]</visible>
						</control>
						<control type="group">
							<left>8</left>
							<top>8</top>
							<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<left>1789.5</left>
				<top>230</top>
				<width>15</width>
				<height>800</height>
				<onleft>50</onleft>
				<onright>SetProperty(MediaMenu,True,home)</onright>
				<onright>SetFocus(9050)</onright>
				<ondown>60</ondown>
				<onup>60</onup>
				<showonepage>false</showonepage>
				<texturesliderbackground>-</texturesliderbackground>
				<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
				<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
				<animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
			</control>
		</control>
	</include>
</includes>