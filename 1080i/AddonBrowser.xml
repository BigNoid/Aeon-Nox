<?xml version="1.0" encoding="utf-8"?>
<window id="20">
    <defaultcontrol>50</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <views>50,57,500,505,509,511,512,53</views>
    <include condition="!Skin.HasSetting(Nox.firstrun)">AutoConfig</include>
    <include condition="!Skin.HasSetting(Nox.firstrun3.5)">AutoConfig3.5</include>
    <controls>
        <control type="multiimage">
            <imagepath background="true">special://skin/backgrounds/addons/</imagepath>
            <include>CommonFanartVarsSingle</include>
            <visible>![Substring(Skin.String(Nox.AddonsHomeItem.MultiFanart),/) | Substring(Skin.String(Nox.AddonsHomeItem.MultiFanart),\)]</visible>
        </control>
        <control type="multiimage">
            <animation effect="zoom" start="110" end="130" center="auto" time="15000" tween="linear" pulse="true" condition="Skin.HasSetting(Nox.animatedbg)">Conditional</animation>
            <animation effect="slide" start="-15,-15" end="15,15" time="7500" tween="linear" pulse="true" condition="Skin.HasSetting(Nox.animatedbg)">Conditional</animation>
            <imagepath fallback="special://skin/backgrounds/addons/" background="true">$INFO[Skin.String(Nox.AddonsHomeItem.MultiFanart)]</imagepath>
            <visible>[SubString(Skin.String(Nox.AddonsHomeItem.MultiFanart),\) | SubString(Skin.String(Nox.AddonsHomeItem.MultiFanart),/)]</visible>
        </control>
        <control type="image">
            <texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
            <include>CommonFanartVarsSingle</include>
        </control>
        <include>VideoBackground</include>
        <control type="image">
            <posy>-207</posy>
            <width>1920</width>
            <height>1080</height>
            <texture>common/black.png</texture>
            <colordiffuse>aaffffff</colordiffuse>
            <animation effect="fade" time="250">WindowOpen</animation>
            <animation effect="fade" time="250">WindowClose</animation>
            <animation effect="fade" start="0" end="100" time="400" delay="100">Visible</animation>
            <animation effect="fade" start="100" end="0" time="400">Hidden</animation>
            <visible>!Control.IsVisible(514) + !Control.IsVisible(516) + !Control.IsVisible(511) + !Control.IsVisible(518)</visible>
            <visible>[[Skin.HasSetting(Nox.darkinfopane) | !Skin.HasSetting(Nox.DisableGlowbar)] + [Control.IsVisible(7550) | Control.IsVisible(510) | Control.IsVisible(50) | [Control.IsVisible(500) + !Skin.HasSetting(Nox.wallfullscreen)] | Control.IsVisible(52) | Control.IsVisible(550)]]</visible>
        </control>
        <control type="image">
            <include>FullscreenDimensions</include>
            <texture>common/black.png</texture>
            <colordiffuse>ccffffff</colordiffuse>
            <animation effect="fade" time="250">WindowOpen</animation>
            <animation effect="fade" time="250">WindowClose</animation>
            <animation effect="fade" start="0" end="100" time="550" delay="200">Visible</animation>
            <animation effect="fade" start="100" end="0" time="100">Hidden</animation>
            <visible>[Control.IsVisible(512) + [[!Container.Content(movies) + Skin.HasSetting(Nox.addonwallaltbackground)] | [Container.Content(movies) + Skin.HasSetting(Nox.addonwallaltbackgroundmovies)]]] | [Control.IsVisible(500) + Skin.HasSetting(Nox.wallfullscreen)]</visible>
        </control>
        <include>Furniture_Showcase</include>
        <include>Furniture_Glow</include>
        <include>WallPanel</include>
        <control type="group">
            <include>CommonRootView</include>
            <include>Viewtype_Wall</include>
            <include>ShowcaseQuadrate</include>
            <include>AddonWall</include>
            <include>ShiftView</include>
            <include>TriPanelSquare</include>
            <include>LowList</include>
            <!-- view id=57 -->
        </control>
        <include>FloorLabels</include>
        <include>Furniture_DarkGradient</include>
        <control type="button" id="7000">
            <include>HiddenObject</include>
            <onfocus>SetFocus(9000)</onfocus>
            <visible>Control.IsVisible(509)</visible>
        </control>
        <control type="group">
            <description>Breadcrumbs</description>
            <include>Animation_HideBreadCrumbs</include>
            <include>Breadcrumbs_BackBar</include>
            <control type="group">
                <control type="grouplist">
                    <posx>22</posx>
                    <posy>0</posy>
                    <width>750</width>
                    <align>left</align>
                    <visible>Skin.HasSetting(Nox.breadcrumbslabel)</visible>
                    <visible>![Player.HasMedia + Skin.HasSetting(Nox.GlobalNowPlaying)]</visible>
                    <itemgap>0</itemgap>
                    <orientation>horizontal</orientation>
                    <control type="image">
                        <description>Items Icon</description>
                        <width>54</width>
                        <height>38</height>
                        <texture>common/puzzle_icon.png</texture>
                        <include>BreadcrumbsIcon</include>
                        <animation effect="slide" start="0" end="-9" time="0" condition="true">Conditional</animation>
                    </control>
                    <control type="label">
                        <include>BreadcrumbsLabel</include>
                        <label>$LOCALIZE[24001]</label>
                    </control>
                    <control type="label">
                        <label>$INFO[Container.FolderName, / ]</label>
                        <include>BreadcrumbsLabel</include>
                    </control>
                </control>
            </control>
            <include>Breadcrumbs_Furniture</include>
        </control>
        <include>Furniture_NowPlayingWidget</include>
        <include>Media_Menu</include>
    </controls>
</window>