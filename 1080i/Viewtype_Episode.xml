<includes>
  <include name="Viewtype_Episode">
    <control type="group">
      <visible>Control.IsVisible(514)</visible>
      <control type="image">
        <width>1920</width>
        <height>1080</height>
        <texture>wall/wall_bg_small.png</texture>
        <include>Animation_WindowFade200</include>
        <animation effect="fade" start="90" end="90" time="400" condition="true">Conditional</animation>
        <visible>Skin.HasSetting(altoverlayinfowall)</visible>
      </control>
      <control type="image">
        <posx>0</posx>
        <posy>0</posy>
        <width>1920</width>
        <height>1080</height>
        <texture>common/fanartoverlay.png</texture>
        <colordiffuse>eeffffff</colordiffuse>
        <visible>!Skin.HasSetting(altoverlayinfowall)</visible>
        <include>Animation_WindowFade200</include>
      </control>
    </control>
    <control type="group">
      <visible>Control.IsVisible(514)</visible>
      <include>Animation_OpenCloseZoom</include>
      <!-- Browser -->
      <control type="fixedlist" id="514">
        <viewtype label="20359">list</viewtype>
        <posx>750</posx>
        <posy>195</posy>
        <width>1400</width>
        <height>700</height>
        <scrolltime>0</scrolltime>
        <orientation>vertical</orientation>
        <movement>3</movement>
        <focusposition>2</focusposition>
        <onup>514</onup>
        <ondown>514</ondown>
        <onleft>9000</onleft>
        <onright>61</onright>
        <pagecontrol>61</pagecontrol>
        <visible>Container.Content(episodes)</visible>
        <animation effect="slide" end="-150,0" delay="1200" condition="true">Conditional</animation>
        <animation effect="slide" end="0,15" time="200" condition="Container(514).Row(0)">Conditional</animation>
        <animation effect="slide" end="0,8" time="200" condition="Container(514).Row(1)">Conditional</animation>
        <animation effect="slide" end="0,0" time="200" condition="Container(514).Row(2)">Conditional</animation>
        <animation effect="slide" end="0,-8" time="200" condition="Container(514).Row(3)">Conditional</animation>
        <animation effect="slide" end="0,-15" time="200" condition="Container(514).Row(4)">Conditional</animation>
        <animation effect="slide" end="0,-22" time="200" condition="Container(514).Row(5)">Conditional</animation>
        <itemlayout width="950" height="90">
          <control type="label">
            <posx>156</posx>
            <posy>0</posy>
            <width>126</width>
            <height>90</height>
            <align>right</align>
            <aligny>center</aligny>
            <label>$INFO[ListItem.Episode]</label>
            <font>Font_OSDTitle2</font>
            <include>listcolornofocus</include>
          </control>
          <control type="label">
            <posx>188</posx>
            <posy>0</posy>
            <width>950</width>
            <height>45</height>
            <align>left</align>
            <label>$VAR[EpisodeTitleVar]</label>
            <font>Font_Bold24</font>
            <include>listcolornofocus</include>
          </control>
          <control type="label">
            <posx>188</posx>
            <posy>50</posy>
            <width>950</width>
            <height>45</height>
            <align>left</align>
            <label>$VAR[EpisodeSubTitleVar]</label>
            <font>Font_Reg18</font>
            <textcolor>ffaaaaaa</textcolor>
          </control>
          <control type="image">
            <posx>30</posx>
            <posy>26</posy>
            <width>42</width>
            <height>42</height>
            <info>ListItem.Overlay,thumbs/Alt</info>
          </control>
        </itemlayout>
        <focusedlayout width="950" height="246">
          <control type="image">
            <posx>11</posx>
            <posy>11</posy>
            <width>396</width>
            <height>226</height>
            <texture background="true" diffuse="thumbs/multiplex_tvmask.png">$INFO[ListItem.Icon]</texture>
            <bordertexture border="9">thumbs/multiplex_tvborder.png</bordertexture>
            <bordersize>9</bordersize>
            <aspectratio scalediffuse="false">scale</aspectratio>
            <animation type="Focus" reversible="false">
              <effect type="zoom" center="127,70" start="50" end="100" time="200" tween="cubic" easing="out" />
            </animation>
          </control>
          <control type="image">
            <posx>324</posx>
            <posy>20</posy>
            <width>75</width>
            <height>75</height>
            <include>OverlayVisibility0</include>
            <animation type="Focus" reversible="false">
              <effect type="zoom" center="127,70" start="50" end="100" time="200" tween="cubic" easing="out" />
              <effect type="fade" start="0" end="100" time="200" />
            </animation>
          </control>
          <control type="label">
            <posx>438</posx>
            <posy>22</posy>
            <width>825</width>
            <scrollout>false</scrollout>
            <pauseatend>1800</pauseatend>
            <scrollspeed>40</scrollspeed>
            <label>[UPPERCASE]$INFO[ListItem.Episode,,. ]$INFO[ListItem.Title][/UPPERCASE]</label>
            <font>Font_ShowcaseMainLabel2_Caps</font>
            <include>listcolornofocus</include>
            <animation type="Focus" reversible="false">
              <effect type="fade" start="0" end="100" time="200" />
            </animation>
            <visible>!IsEmpty(ListItem.Title)</visible>
          </control>
          <control type="label">
            <posx>438</posx>
            <posy>195</posy>
            <width>950</width>
            <height>90</height>
            <align>left</align>
            <label>$INFO[ListItem.Date]$INFO[ListItem.Rating, • ]</label>
            <font>Font_Reg18</font>
            <textcolor>ffaaaaaa</textcolor>
            <visible>!IsEmpty(ListItem.Title)</visible>
          </control>
        </focusedlayout>
      </control>
      <control type="textbox">
        <posx>1191</posx>
        <posy>282</posy>
        <width>729</width>
        <height>99</height>
        <align>left</align>
        <info>Container(514).ListItem.Plot</info>
        <font>Font_Reg18</font>
        <include>listcolornofocus</include>
        <animation effect="slide" end="0,90" time="0" condition="Container(514).Row(1)">Conditional</animation>
        <animation effect="slide" end="0,180" time="0" condition="Container(514).Row(2)">Conditional</animation>
        <animation effect="slide" end="0,270" time="0" condition="Container(514).Row(3)">Conditional</animation>
        <animation effect="slide" end="0,360" time="0" condition="Container(514).Row(4)">Conditional</animation>
        <animation effect="slide" end="0,450" time="0" condition="Container(514).Row(5)">Conditional</animation>
        <animation effect="slide" end="0,15" time="200" condition="Container(514).Row(0)">Conditional</animation>
        <animation effect="slide" end="0,8" time="200" condition="Container(514).Row(1)">Conditional</animation>
        <animation effect="slide" end="0,0" time="200" condition="Container(514).Row(2)">Conditional</animation>
        <animation effect="slide" end="0,-8" time="200" condition="Container(514).Row(3)">Conditional</animation>
        <animation effect="slide" end="0,-15" time="200" condition="Container(514).Row(4)">Conditional</animation>
        <animation effect="slide" end="0,-22" time="200" condition="Container(514).Row(5)">Conditional</animation>
        <animation effect="slide" end="-150,0" delay="1200" condition="true">Conditional</animation>
        <animation type="Conditional" reversible="false" condition="Control.HasFocus(514) + [!Container(514).OnNext + !Container(514).OnPrevious]">
          <effect type="fade" start="0" end="100" time="200" />
        </animation>
        <autoscroll time="3600" delay="6000" repeat="6000">Skin.HasSetting(AutoScroll)</autoscroll>
      </control>
      <control type="scrollbar" id="61">
        <posx>1840</posx>
        <posy>128</posy>
        <width>98</width>
        <height>822</height>
        <visible allowhiddenfocus="true">Control.HasFocus(61)</visible>
        <texturesliderbackground>views/scrollbarbacklist.png</texturesliderbackground>
        <texturesliderbar>-</texturesliderbar>
        <texturesliderbarfocus>-</texturesliderbarfocus>
        <textureslidernib>views/scrollbarnub-nofocus.png</textureslidernib>
        <textureslidernibfocus>views/scrollbarnub-focus.png</textureslidernibfocus>
        <orientation>vertical</orientation>
        <showonepage>false</showonepage>
        <pulseonselect>yes</pulseonselect>
        <onleft>514</onleft>
        <onright>9000</onright>
      </control>
      <control type="label">
        <posx>60</posx>
        <posy>998</posy>
        <height>20</height>
        <width>690</width>
        <font>Font_Reg18</font>
        <align>left</align>
        <textcolor>white2</textcolor>
        <scroll>true</scroll>
        <label>$INFO[ListItem.Season,$LOCALIZE[20373] ]</label>
      </control>
      <control type="label">
        <posx>60</posx>
        <posy>1035</posy>
        <height>20</height>
        <width>690</width>
        <font>Font_Reg18</font>
        <align>left</align>
        <textcolor>white2</textcolor>
        <label>$INFO[Container(514).NumItems,, [LOWERCASE]$LOCALIZE[20360][/LOWERCASE]]</label>
      </control>
      <control type="image">
        <posx>1461</posx>
        <posy>840</posy>
        <width>399</width>
        <height>142</height>
        <aspectratio>keep</aspectratio>
        <fadetime>400</fadetime>
        <texture background="true">$INFO[ListItem.path,,../logo.png]</texture>
      </control>
      <control type="image">
        <posx>49</posx>
        <posy>190</posy>
        <width>502</width>
        <height>739</height>
        <aspectratio scalediffuse="false">stretch</aspectratio>
        <fadetime>400</fadetime>
        <texture background="true" diffuse="thumbs/movieposter_mask.png">$VAR[EpisodeViewPosterVar]</texture>
        <bordertexture border="19.5">thumbs/poster_shadow.png</bordertexture>
        <bordersize>19</bordersize>
      </control>
      <control type="image">
        <posx>49</posx>
        <posy>190</posy>
        <width>502</width>
        <height>739</height>
        <aspectratio scalediffuse="false">stretch</aspectratio>
        <fadetime>400</fadetime>
        <texture background="true" diffuse="thumbs/movieposter_mask.png">$INFO[Container.SeasonThumb]</texture>
        <bordertexture border="19.5">thumbs/poster_shadow.png</bordertexture>
        <bordersize>19</bordersize>
        <visible>!Skin.HasSetting(EpisodeViewIcon)</visible>
      </control>
    </control>
  </include>
</includes>