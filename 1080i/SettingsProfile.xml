<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="true">2</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <include condition="!Skin.HasSetting(firstrun4.0)">AutoConfig</include>
    <animation type="WindowOpen" reversible="false" condition="!Window.Previous(settings)">
        <effect type="zoom" start="150" end="100" center="960,540" time="240" tween="cubic" />
        <effect type="fade" end="100" time="240" />
    </animation>
    <animation type="WindowClose" reversible="false" condition="!Window.Next(settings)">
        <effect type="fade" start="100" end="0" time="240" />
        <effect type="zoom" start="100" end="130" center="960,540" time="240" tween="cubic" easing="in" />
    </animation>
    <controls>
        <control type="group">
            <include>CommonSettingsBackground</include>
            <include>CommonMediaPlayingBackground</include>
            <include>Furniture_SettingsFloor</include>
        </control>
        <control type="group">
            <animation effect="zoom" end="91" center="960,360" time="320" tween="cubic" easing="inout" condition="true">Conditional</animation>
            <visible>![Window.isVisible(ProfileSettings) | Window.IsVisible(LockSettings)]</visible>
            <include>Furniture_SettingsBackPanel</include>
            <control type="list" id="2">
                <posx>63</posx>
                <posy>195</posy>
                <width>750</width>
                <height>567</height>
                <onleft>9001</onleft>
                <onright>9001</onright>
                <onup>2</onup>
                <ondown>2</ondown>
                <scrolltime>300</scrolltime>
                <itemlayout height="74" width="570">
                    <control type="label">
                        <posx>30</posx>
                        <width>306</width>
                        <height>74</height>
                        <label>$INFO[ListItem.Label]</label>
                        <font>Font_Bold34</font>
                        <textcolor>grey2</textcolor>
                    </control>
                </itemlayout>
                <focusedlayout height="74" width="570">
                    <control type="image">
                        <width>324</width>
                        <height>74</height>
                        <texture border="8">views/tripanel/listselect_fo.png</texture>
                        <animation effect="fade" start="100" end="50" time="40" condition="!Control.HasFocus(2)">Conditional</animation>
                        <colordiffuse>$VAR[FocusTextureColorVar]</colordiffuse>
                    </control>
                    <control type="label">
                        <posx>30</posx>
                        <width>306</width>
                        <height>74</height>
                        <label>$INFO[ListItem.Label]</label>
                        <font>Font_Bold34</font>
                    </control>
                </focusedlayout>
            </control>
            <control type="grouplist" id="9001">
                <posx>387</posx>
                <posy>195</posy>
                <width>1469</width>
                <height>722</height>
                <itemgap>-1</itemgap>
                <pagecontrol>60</pagecontrol>
                <onleft>2</onleft>
                <onright>60</onright>
                <onup>9001</onup>
                <ondown>9001</ondown>
                <control type="radiobutton" id="4">
                    <label>20096</label>
                    <include>Default_SettingRadioButton</include>
                </control>
                <control type="button" id="5">
                    <label>Auto Login</label>
                    <include>Default_SettingButton</include>
		    		<visible>!System.HasLoginScreen</visible> 
                    <enable>!Window.IsVisible(ProfileSettings) + !System.HasLoginScreen</enable> 
                </control>
              	<control type="button"> 
                    <description>Choose auto login user (grayed out)</description> 
                    <posx>10</posx> 
                    <posy>161</posy> 
                    <width>250</width> 
                    <height>72</height> 
                    <textoffsety>8</textoffsety> 
                    <label>19284</label> 
                    <font>font24_title</font> 
                    <textcolor>grey2</textcolor> 
                    <align>right</align> 
                    <aligny>top</aligny> 
                    <texturenofocus border="5">MenuItemNF.png</texturenofocus> 
                    <texturefocus border="5">MenuItemFO.png</texturefocus> 
                    <onleft>2</onleft> 
                    <onright>2</onright> 
                    <onup>4</onup> 
                    <ondown>4</ondown> 
                    <visible>System.HasLoginScreen</visible> 
                    <enable>false</enable> 
                </control> 
                <control type="label"> 
                    <posx>247</posx> 
                    <posy>201</posy> 
                    <width>200</width> 
                    <height>25</height> 
                    <font>font13caps</font> 
                    <textcolor>grey2</textcolor> 
                    <align>right</align> 
                    <aligny>center</aligny> 
                    <label>$INFO[System.ProfileAutoLogin]</label> 
                    <scroll>Control.HasFocus(5)</scroll> 
                    <scrollspeed>30</scrollspeed> 
                    <visible>!System.HasLoginScreen</visible> 
                </control> 
            </control>
            <control type="label">
                <posx>358</posx>
                <posy>120</posy>
                <width>1491</width>
                <align>center</align>
                <aligny>top</aligny>
                <label>$LOCALIZE[10034]</label>
                <font>Font_ShowcaseMainLabel2</font>
                <shadowcolor>black</shadowcolor>
            </control>
        </control>
        <control type="group">
            <include>Animation_HideBreadCrumbs</include>
            <include>Breadcrumbs_BackBar</include>
            <include>BreadcrumbsContent</include>
            <include>Breadcrumbs_Furniture</include>
        </control>
        <include>Furniture_NowPlayingWidget</include>
    </controls>
</window>