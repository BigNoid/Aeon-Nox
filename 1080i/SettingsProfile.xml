<?xml version="1.0" encoding="utf-8"?>
<window id="20">
    <defaultcontrol always="true">2</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <include condition="!Skin.HasSetting(firstrun)">AutoConfig</include>
    <controls>
        <include>CommonSettingsBackground</include>
        <include>CommonMediaPlayingBackground</include>
        <control type="group">
            <visible>![Window.isVisible(ProfileSettings) | Window.IsVisible(LockSettings)]</visible>
            <animation type="WindowOpen" reversible="false" condition="!Window.Previous(10004)">
                <effect type="zoom" start="150" end="100" center="960,540" time="300" tween="cubic" easing="out" />
                <effect type="fade" start="0" end="100" time="300" />
            </animation>
            <animation type="WindowClose" reversible="false" condition="!Window.Next(10004)">
                <effect type="fade" start="100" end="0" time="300" />
                <effect type="zoom" start="100" end="130" center="960,540" time="300" tween="cubic" easing="in" />
            </animation>
            <include>Furniture_SettingsFloor</include>
            <include>Furniture_SettingsBackPanel</include>
            <include>Furniture_SettingsLogo</include>
            <control type="list" id="2">
                <posx>63</posx>
                <posy>195</posy>
                <width>750</width>
                <height>567</height>
                <itemgap>0</itemgap>
                <onleft>9001</onleft>
                <onright>9001</onright>
                <onup>2</onup>
                <ondown>2</ondown>
                <pagecontrol>-</pagecontrol>
                <scrolltime>300</scrolltime>
                <itemlayout height="74" width="570">
                    <control type="label">
                        <posx>30</posx>
                        <posy>0</posy>
                        <width>306</width>
                        <height>74</height>
                        <font>Font_Bold20</font>
                        <include>detailcolornofocus</include>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="74" width="570">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>324</width>
                        <height>74</height>
                        <texture>views/tripanel/listselect_fo.png</texture>
                        <animation effect="fade" start="100" end="50" time="50" condition="!Control.HasFocus(2)">Conditional</animation>
                        <colordiffuse>$VAR[ColorDiffuseVar]</colordiffuse>
                    </control>
                    <control type="label">
                        <posx>30</posx>
                        <posy>0</posy>
                        <width>306</width>
                        <height>74</height>
                        <font>Font_Bold20</font>
                        <include>listcolornofocus</include>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </focusedlayout>
            </control>
            <control type="grouplist" id="9001">
                <posx>387</posx>
                <posy>195</posy>
                <width>1469</width>
                <height>722</height>
                <itemgap>-1</itemgap>
                <pagecontrol>60</pagecontrol>
                <onleft>2</onleft>
                <onright>60</onright>
                <onup>9001</onup>
                <ondown>9001</ondown>
                <control type="radiobutton" id="4">
                    <label>20096</label>
                    <include>Default_SettingRadioButton</include>
                </control>
            </control>
            <control type="label">
                <description>header label</description>
                <posx>358</posx>
                <posy>120</posy>
                <width>1491</width>
                <font>Font_ShowcaseMainLabel2</font>
                <label>$LOCALIZE[10034]</label>
                <align>center</align>
                <aligny>center</aligny>
                <textcolor>white</textcolor>
                <shadowcolor>black</shadowcolor>
            </control>
        </control>
        <control type="group">
            <description>Breadcrumbs</description>
            <include>Animation_HideBreadCrumbs</include>
            <include>Breadcrumbs_BackBar</include>
            <control type="group">
                <control type="grouplist">
                    <posx>22</posx>
                    <posy>0</posy>
                    <width>750</width>
                    <align>left</align>
                    <visible>Skin.HasSetting(breadcrumbslabel)</visible>
                    <visible>![Player.HasMedia + Skin.HasSetting(GlobalNowPlaying)]</visible>
                    <itemgap>0</itemgap>
                    <orientation>horizontal</orientation>
                    <control type="image">
                        <description>Items Icon</description>
                        <width>54</width>
                        <height>34</height>
                        <texture>common/settings_logo.png</texture>
                        <include>BreadcrumbsIcon</include>
                        <animation effect="slide" start="0,0" end="-9,2" time="0" condition="true">Conditional</animation>
                    </control>
                    <control type="label">
                        <include>BreadcrumbsLabel</include>
                        <label>$LOCALIZE[5]</label>
                    </control>
                    <control type="label">
                        <include>BreadcrumbsLabel</include>
                        <label> / $LOCALIZE[13200]</label>
                    </control>
                </control>
            </control>
            <include>Breadcrumbs_Furniture</include>
        </control>
        <include>Furniture_NowPlayingWidget</include>
    </controls>
</window>