<window>
	<defaultcontrol>11</defaultcontrol>
	<animation effect="slide" start="0,-120" end="0,0" time="100">WindowOpen</animation>
	<animation effect="slide" start="0,0" end="0,-180" time="100">WindowClose</animation>
	<coordinates>
		<system>1</system>
		<left>600</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>720</width>
			<height>140</height>
			<texture border="40,0,40,35">topbar2.png</texture>
			<visible>[Window.IsActive(fullscreenvideo) | Window.IsActive(visualisation) | Window.isActive(slideshow)]</visible>
		</control>
		<control type="label" id="10">
			<description>Dialog header</description>
			<left>30</left>
			<top>0</top>
			<width>345</width>
			<height>60</height>
			<align>left</align>
			<aligny>center</aligny>
			<textoffsetx>15</textoffsetx>
			<font>font14_title</font>
			<textcolor>grey2</textcolor>
		</control>
		<control type="label" id="12">
			<description>Slider Value</description>
			<left>30</left>
			<top>0</top>
			<width>650</width>
			<height>60</height>
			<align>right</align>
			<aligny>center</aligny>
			<font>font14_title</font>
			<textcolor>grey2</textcolor>
		</control>
		<control type="slider" id="11">
			<description>Slider</description>
			<left>45</left>
			<top>60</top>
			<width>630</width>
			<height>30</height>
			<aligny>center</aligny>
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
			<texturesliderbar>osd_slider_bg_2.png</texturesliderbar>
			<textureslidernib>osd_slider_nibNF.png</textureslidernib>
			<textureslidernibfocus>osd_slider_nib.png</textureslidernibfocus>
			<onup>11</onup>
			<ondown>11</ondown>
			<onleft>11</onleft>
			<onright>11</onright>
		</control>
	</controls>
</window>