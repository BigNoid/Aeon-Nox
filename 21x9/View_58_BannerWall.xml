<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- BannerWall -->
	<include name="BannerWall">
		<control type="group">
			<visible>Control.IsVisible(58) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<top>-10</top>
			<left>40</left>
			<control type="image">
				<description>background image</description>
				<left>90</left>
				<top>885</top>
				<width>2300</width>
				<height>839</height>
				<texture border="40">panel_reflect.png</texture>
			</control>
			<control type="image">
				<description>background image</description>
				<left>90</left>
				<top>89</top>
				<width>2300</width>
				<height>935</height>
				<texture border="40">listpanel_back.png</texture>
			</control>
			<control type="panel" id="58">
				<left>120</left>
				<top>120</top>
				<width>1740</width>
				<height>880</height>
				<onleft>60</onleft>
				<onright>61</onright>
				<onup>58</onup>
				<ondown>58</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="31088">icons</viewtype>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<visible>Container.Content(tvshows) | Container.Content(movies)</visible>
				<itemlayout height="110" width="560">
					<control type="image">
						<width>560</width>
						<height>110</height>
						<aspectratio>scale</aspectratio>
						<texture colordiffuse="BAFFFFFF" background="true">$VAR[BannerThumb]</texture>
						<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
						<bordersize>4</bordersize>
						<visible>!IsEmpty(ListItem.Art(banner)) | IsEmpty(ListItem.Art(fanart))</visible>
					</control>
					<control type="group">
						<visible>IsEmpty(ListItem.Art(banner))</visible>
						<control type="image">
							<width>560</width>
							<height>110</height>
							<aspectratio>scale</aspectratio>
							<texture colordiffuse="BAFFFFFF" background="true">$INFO[ListItem.Art(fanart)]</texture>
							<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
							<bordersize>4</bordersize>
						</control>
						<control type="image">
							<top>5</top>
							<width>300</width>
							<height>100</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
							<bordersize>4</bordersize>
							<colordiffuse>BAffffff</colordiffuse>
						</control>
					</control>
					<control type="image">
						<left>490</left>
						<top>0</top>
						<width>60</width>
						<height>60</height>
						<texture>$VAR[OverlayVar]</texture>
						<aspectratio align="center" aligny="top">keep</aspectratio>
						<bordersize>4</bordersize>
					</control>
					<control type="group">
						<left>10</left>
						<top>10</top>
						<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
					</control>
				</itemlayout>
				<focusedlayout height="110" width="560">
					<control type="group">
						<animation type="Focus" reversible="false">
							<effect type="zoom" start="95" end="100" time="300" tween="sine" easing="inout" center="auto" />
							<effect type="fade" start="80" end="100" time="300" tween="sine" easing="in" />
						</animation>
						<control type="image">
							<width>560</width>
							<height>110</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$VAR[BannerThumb]</texture>
							<bordertexture border="8">thumbs/thumbnail_focused.png</bordertexture>
							<bordersize>8</bordersize>
							<visible>!IsEmpty(ListItem.Art(banner)) | IsEmpty(ListItem.Art(fanart))</visible>
						</control>
						<control type="group">
							<visible>IsEmpty(ListItem.Art(banner))</visible>
							<control type="image">
								<width>560</width>
								<height>110</height>
								<aspectratio>scale</aspectratio>
								<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
								<bordertexture border="8">thumbs/thumbnail_focused.png</bordertexture>
								<bordersize>8</bordersize>
							</control>
							<control type="image">
								<top>5</top>
								<width>300</width>
								<height>100</height>
								<aspectratio>keep</aspectratio>
								<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
								<bordersize>4</bordersize>
							</control>
						</control>
						<control type="image">
							<left>490</left>
							<top>4</top>
							<width>60</width>
							<height>60</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<bordersize>4</bordersize>
						</control>
						<control type="group">
							<left>10</left>
							<top>10</top>
							<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<left>104</left>
				<top>179</top>
				<width>14</width>
				<height>900</height>
				<onright>50</onright>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<ondown>60</ondown>
				<onup>60</onup>
				<showonepage>false</showonepage>
				<texturesliderbackground>-</texturesliderbackground>
				<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
				<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
				<animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
			</control>

			<control type="group">
				<left>1800</left>
				<top>120</top>
				<control type="image">
					<width>560</width>
					<height>330</height>
					<aspectratio>scale</aspectratio>
					<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
					<fadetime>300</fadetime>
					<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
					<bordersize>2</bordersize>
				</control>
				<control type="label">
					<top>325</top>
					<width>560</width>
					<height>60</height>
					<font>font16_title_bold</font>
					<textcolor>grey</textcolor>
					<scroll>true</scroll>
					<label>$VAR[FloorLabelVar]</label>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="button">
					<top>370</top>
					<width>560</width>
					<label>$INFO[ListItem.Genre,,[CR]]$VAR[VideoSubLabelVar]</label>
					<include>ShowCaseInfoPanelButtonsValues</include>
				</control>
				<control type="textbox">
					<label>$VAR[VideoPlotVar]</label>
					<left>15</left>
					<top>464</top>
					<width>530</width>
					<height>402</height>
					<font>font14_textbox</font>
					<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll) + !Control.HasFocus(61)</autoscroll>
					<pagecontrol>61</pagecontrol>
					<include>ShowCaseInfoPanelButtonsValues</include>
				</control>
				<control type="scrollbar" id="61">
					<left>557</left>
					<top>441</top>
					<width>14</width>
					<height>302</height>
					<onleft>50</onleft>
					<onright>SetProperty(MediaMenu,True,home)</onright>
					<onright>SetFocus(9050)</onright>
					<ondown>61</ondown>
					<onup>61</onup>
					<showonepage>false</showonepage>
					<texturesliderbackground>-</texturesliderbackground>
					<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
					<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
				</control>
			</control>
		</control>
	</include>
</includes>