<?xml version="1.0" encoding="UTF-8"?>
<window>
	<controls>
		<control type="group">
			<visible>!Window.IsVisible(startup) + String.IsEmpty(Window(Home).Property(script.cinemavision.running))</visible>
			<control type="image">
				<include>FullscreenDimensions</include>
				<texture border="1" colordiffuse="D9FFFFFF">black.png</texture>
				<animation effect="fade" time="300">WindowOpen</animation>
				<animation effect="fade" time="300">WindowClose</animation>
			</control>
			<control type="progress" id="10">
				<description>progress control</description>
				<width>1</width>
				<height>1</height>
				<texturebg />
				<lefttexture />
				<midtexture />
				<righttexture />
				<overlaytexture />
			</control>
			<control type="group">
				<include>DialogOpenCloseAnimation</include>
				<control type="group">
					<visible>!System.Platform.Linux.RaspberryPi</visible>
					<left>912</left>
					<top>492</top>
					<control type="image">
						<description>Busy animation</description>
						<width>96</width>
						<height>96</height>
						<texture colordiffuse="$VAR[ThemeLabelColor]">android/spinner_48_inner_holo.png</texture>
						<aspectratio>keep</aspectratio>
						<animation effect="rotate" start="0" end="360" center="auto" time="2000" loop="true" condition="true">Conditional</animation>
					</control>
					<control type="image">
						<description>Busy animation</description>
						<width>96</width>
						<height>96</height>
						<texture colordiffuse="$VAR[ThemeLabelColor]">android/spinner_48_outer_holo.png</texture>
						<aspectratio>keep</aspectratio>
						<animation effect="rotate" start="360" end="0" center="auto" time="2000" loop="true" condition="true">Conditional</animation>
					</control>
					<control type="label">
						<description>Busy label</description>
						<width>96</width>
						<height>96</height>
						<textcolor>grey</textcolor>
						<align>center</align>
						<label>$INFO[Control.GetLabel(10),,%]</label>
						<font>font12</font>
						<visible>!Integer.IsEqual(Control.GetLabel(10), 0)</visible>
					</control>
				</control>
				<control type="list">
					<left>880</left>
					<top>490</top>
					<width>180</width>
					<height>100</height>
					<scrolltime tween="quadratic" easing="out">0</scrolltime>
					<autoscroll time="1000" repeat="1000">true</autoscroll>
					<visible>System.Platform.Linux.RaspberryPi</visible>
					<itemlayout height="100">
						<control type="label">
							<description>Busy label</description>
							<width>180</width>
							<height>100</height>
							<textcolor>grey</textcolor>
							<label>$INFO[ListItem.Label]</label>
							<font>font16</font>
						</control>
					</itemlayout>
					<focusedlayout height="100">
						<control type="label">
							<description>Busy label</description>
							<width>180</width>
							<height>100</height>
							<textcolor>grey</textcolor>
							<label>$INFO[ListItem.Label]</label>
							<font>font16</font>
						</control>
					</focusedlayout>
					<content>
						<item>
							<label>$LOCALIZE[31004]</label>
						</item>
						<item>
							<label>$LOCALIZE[31004].</label>
						</item>
						<item>
							<label>$LOCALIZE[31004]..</label>
						</item>
						<item>
							<label>$LOCALIZE[31004]...</label>
						</item>
					</content>
				</control>
			</control>
		</control>
	</controls>
</window>