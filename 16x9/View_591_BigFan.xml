<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="contents591list">
		<width>1920</width>
		<height>1080</height>
		<onup>SetProperty(MediaMenu,True,Home)</onup>
		<onup>SetFocus(9050)</onup>
		<onleft>591</onleft>
		<onright>591</onright>
		<ondown condition="Control.IsVisible(615)">616</ondown>
		<ondown condition="!Control.IsVisible(615)">4400</ondown>
		<orientation>horizontal</orientation>
		<viewtype label="$LOCALIZE[31249]">list</viewtype>
		<preloaditems>2</preloaditems>
		<scrolltime tween="quadratic">200</scrolltime>
		<itemlayout width="1080" height="1920" />
		<focusedlayout width="1080" height="1920">
			<control type="group">
				<animation type="Visible">
					<effect type="fade" time="120" end="100" />
				</animation>
				<animation type="Hidden">
					<effect type="fade" time="120" start="100" end="0" />
				</animation>
				<animation type="WindowOpen">
					<effect type="fade" time="320" end="100" />
				</animation>
				<animation type="WindowClose">
					<effect type="fade" time="240" start="100" end="0" />
				</animation>
			</control>
		</focusedlayout>
	</include>
	<include name="BigFanList">
		<control type="fixedlist" id="591">
			<include>contents591list</include>
		</control>
	</include>
	<include name="View_591_BigFan">
		<control type="group">
			<visible>Control.IsVisible(591) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<include>BigFanList</include>
			<control type="image">
				<top>675</top>
				<left>20</left>
				<width>292</width>
				<height>412</height>
				<texture background="true">$VAR[PosterThumbVar]</texture>
				<fadetime>200</fadetime>
				<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
				<bordersize>20</bordersize>
				<animation effect="fade" delay="240" time="240" reversible="false">Hidden</animation>
			</control>
			<control type="image">
				<left>222</left>
				<top>695</top>
				<width>80</width>
				<height>80</height>
				<texture>$VAR[OverlayVar]</texture>
				<aspectratio align="center" aligny="top">keep</aspectratio>
			</control>
			<control type="group">
				<animation effect="slide" end="0,-140" condition="Skin.HasSetting(EnableBigFanPlot) + !ListItem.IsCollection">Conditional</animation>
				<animation effect="slide" end="0,-60" condition="Skin.HasSetting(EnableBigFanPlot) + ListItem.IsCollection">Conditional</animation>
				<top>-65</top>
				<control type="label">
					<left>300</left>
					<top>910</top>
					<width>1400</width>
					<height>42</height>
					<aligny>top</aligny>
					<font>font16_title</font>
					<textcolor>grey</textcolor>
					<scroll>true</scroll>
					<label>[B]$INFO[ListItem.Label][/B]</label>
					<textoffsety>-2</textoffsety>
					<textoffsetx>30</textoffsetx>
				</control>
				<control type="label">
					<left>300</left>
					<top>960</top>
					<width>1105</width>
					<height>30</height>
					<font>font13_bold</font>
					<textcolor>grey</textcolor>
					<label>$INFO[ListItem.Year,, • ]$INFO[ListItem.RatingAndVotes,, • ]$INFO[ListItem.Duration(mins),, $LOCALIZE[12391]]$INFO[ListItem.Endtime, • $LOCALIZE[31393]: ,]</label>
					<textoffsetx>30</textoffsetx>
					<visible>Container.Content(movies) + !ListItem.IsCollection</visible>
				</control>
				<control type="label">
					<left>300</left>
					<top>1000</top>
					<width>1305</width>
					<height>30</height>
					<label>$INFO[ListItem.Genre]</label>
					<font>font13_bold</font>
					<textcolor>grey</textcolor>
					<textoffsetx>30</textoffsetx>
					<scroll>true</scroll>
				</control>
				<control type="label">
					<top>960</top>
					<left>330</left>
					<width>1220</width>
					<height>30</height>
					<font>font13_bold</font>
					<textcolor>grey2</textcolor>
					<label>$LOCALIZE[31010]: $INFO[Window(Home).Property(NextAired.NextNumber)] - $INFO[Window(Home).Property(NextAired.NextTitle)] ($INFO[Window(Home).Property(NextAired.NextDay)])</label>
					<visible>!String.IsEmpty(Window(Home).Property(NextAired.NextDate))</visible>
				</control>
				<control type="label">
					<left>330</left>
					<top>960</top>
					<width>1220</width>
					<height>30</height>
					<label>$INFO[Window(Home).Property(NextAired.Status)]</label>
					<font>font13_bold</font>
					<textcolor>grey2</textcolor>
					<visible>String.IsEmpty(Window(Home).Property(NextAired.NextDate))</visible>
				</control>
				<control type="group">
					<visible>ListItem.IsCollection</visible>
					<animation effect="fade" time="140" delay="100">Visible</animation>
					<control type="label">
						<left>300</left>
						<top>960</top>
						<width>1105</width>
						<height>30</height>
						<font>font13_bold</font>
						<textcolor>grey</textcolor>
						<label>$INFO[Window(Home).Property(SkinInfo.Set.Movies.Count),, $LOCALIZE[342]]</label>
						<textoffsetx>30</textoffsetx>
						<visible>!Skin.HasSetting(EnableBigFanPlot) + ListItem.IsCollection</visible>
					</control>
					<control type="label">
						<left>300</left>
						<top>1000</top>
						<width>1105</width>
						<height>30</height>
						<font>font13_bold</font>
						<textcolor>grey</textcolor>
						<label>$INFO[Window(Home).Property(SkinInfo.Set.Movies.Genre)]</label>
						<textoffsetx>30</textoffsetx>
						<visible>!Skin.HasSetting(EnableBigFanPlot) + ListItem.IsCollection</visible>
					</control>
				</control>
			</control>
			<control type="textbox">
				<top>840</top>
				<left>330</left>
				<width>1550</width>
				<height>155</height>
				<font>font14_textbox</font>
				<textcolor>$VAR[ThemeLabelColor]</textcolor>
				<aligny>top</aligny>
				<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
				<include>DefaultButtonsValues</include>
				<label>$INFO[ListItem.Tagline,, - ][COLOR grey]$VAR[VideoPlotVar][/COLOR]</label>
				<visible>Skin.HasSetting(EnableBigFanPlot)</visible>
			</control>
		</control>
	</include>
</includes>