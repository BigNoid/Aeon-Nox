<?xml version="1.0" encoding="UTF-8"?>
<window>
	<animation type="WindowOpen" reversible="false">
		<effect type="slide" start="0,-138" tween="cubic" easing="inout" time="720" />
	</animation>
	<animation type="WindowClose" reversible="false">
		<effect type="slide" end="0,-138" tween="cubic" easing="inout" time="720" />
	</animation>
	<controls>
		<control type="group">
			<visible>!Window.IsActive(fullscreenvideo) + !Window.IsActive(visualisation) + !Window.IsActive(startup)</visible>
			<width>110%</width>
			<control type="image">
				<left>-5%</left>
				<top>-40</top>
				<width>110%</width>
				<height>138</height>
				<align>center</align>
				<texture border="40">dialogs/default/bg.png</texture>
			</control>
			<control type="progress" id="32">
				<width>100%</width>
				<height>72</height>
				<lefttexture />
				<righttexture />
				<overlaytexture />
				<texturebg>osd/texturebg2.png</texturebg>
				<midtexture colordiffuse="$VAR[ThemeLabelColor]">osd/midtexture.png</midtexture>
				<colordiffuse>44FFFFFF</colordiffuse>
			</control>
			<control type="label">
				<left>5</left>
				<top>1</top>
				<width>1910</width>
				<height>36</height>
				<font>font24_title</font>
				<textcolor>grey</textcolor>
				<textoffsetx>15</textoffsetx>
				<label>$INFO[Control.GetLabel(30)]$INFO[Control.GetLabel(32),: ,%]</label>
			</control>
			<control type="label" id="31">
				<left>5</left>
				<top>38</top>
				<width>1910</width>
				<height>35</height>
				<font>font15_title</font>
				<textoffsetx>15</textoffsetx>
			</control>
			<control type="label" id="30">
				<description>Header Label</description>
				<include>HiddenObject</include>
			</control>
		</control>
	</controls>
</window>