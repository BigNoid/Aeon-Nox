<includes>
  <include name="BannerPlexVertical">
    <onleft>7000</onleft>
    <onright>61</onright>
    <onup>508</onup>
    <ondown>508</ondown>
    <orientation>vertical</orientation>
  </include>
  <include name="BannerPlexHorizontal">
    <onleft>508</onleft>
    <onright>508</onright>
    <onup>7000</onup>
    <ondown>61</ondown>
    <orientation>horizontal</orientation>
  </include>
  <include name="Banners">
    <control type="group">
      <visible>Control.IsVisible(508)</visible>
      <include>Animation_OpenCloseZoom</include>
      <control type="image">
        <posx>60</posx>
        <posy>806</posy>
        <width>50</width>
        <height>56</height>
        <texture>views/multiplex_arrow2.png</texture>
        <animation effect="slide" start="-150" end="0" delay="800" time="400" easing="out" tween="cubic">WindowOpen</animation>
        <animation effect="rotate" center="auto" start="0" end="-90" time="100" condition="Skin.HasSetting(BannerPlexVertical)">Conditional</animation>
        <include>Animation_HideMultiplex</include>
        <visible>[IntegerGreaterThan(Container(508).NumItems,10) + !system.getbool(filelists.showparentdiritems)] | [IntegerGreaterThan(Container(508).NumItems,9) + system.getbool(filelists.showparentdiritems)]</visible>
      </control>
      <control type="image">
        <posx>1810</posx>
        <posy>806</posy>
        <width>50</width>
        <height>56</height>
        <texture flipx="true">views/multiplex_arrow2.png</texture>
        <animation effect="slide" start="150" end="0" delay="800" time="400" easing="out" tween="cubic">WindowOpen</animation>
        <animation effect="rotate" center="auto" start="0" end="-90" time="100" condition="Skin.HasSetting(BannerPlexVertical)">Conditional</animation>
        <include>Animation_HideMultiplex</include>
        <visible>[IntegerGreaterThan(Container(508).NumItems,10) + !system.getbool(filelists.showparentdiritems)] | [IntegerGreaterThan(Container(508).NumItems,9) + system.getbool(filelists.showparentdiritems)]</visible>
      </control>
      <control type="panel" id="508">
        <posx>117</posx>
        <posy>622</posy>
        <width>1688</width>
        <height>368</height>
        <include condition="Skin.HasSetting(BannerPlexVertical)">BannerPlexVertical</include>
        <include condition="!Skin.HasSetting(BannerPlexVertical)">BannerPlexHorizontal</include>
        <viewtype label="$LOCALIZE[31236]">wide icon</viewtype>
        <pagecontrol>61</pagecontrol>
        <scrolltime>200</scrolltime>
        <focusposition>2</focusposition>
        <preloaditems>2</preloaditems>
        <visible>Container.Content(TVShows)</visible>
        <animation effect="fade" start="100" end="0" time="400" condition="Control.HasFocus(109)">Conditional</animation>
        <itemlayout width="562" height="120">
          <control type="image">
            <posx>8</posx>
            <posy>8</posy>
            <width>548</width>
            <height>105</height>
            <aspectratio scalediffuse="false">stretch</aspectratio>
            <texture diffuse="thumbs/banner_wall_mask.png">common/black.png</texture>
          </control>
          <control type="label">
            <posx>272</posx>
            <posy>8</posy>
            <width>528</width>
            <height>105</height>
            <aligny>center</aligny>
            <align>center</align>
            <textcolor>white</textcolor>
            <label>$INFO[ListItem.Label]</label>
            <font>Font_Bold24</font>
          </control>
          <control type="image">
            <posx>8</posx>
            <posy>8</posy>
            <width>548</width>
            <height>105</height>
            <aspectratio scalediffuse="false">stretch</aspectratio>
            <texture background="true" diffuse="thumbs/banner_wall_mask.png">$VAR[BannerVar]</texture>
          </control>
          <control type="image">
            <posx>8</posx>
            <posy>8</posy>
            <width>548</width>
            <height>105</height>
            <colordiffuse>55FFFFFF</colordiffuse>
            <aspectratio scalediffuse="false">scale</aspectratio>
            <texture diffuse="thumbs/banner_wall_mask.png">common/black.png</texture>
          </control>
          <control type="image">
            <posx>495</posx>
            <posy>8</posy>
            <width>60</width>
            <height>60</height>
            <include condition="!Skin.HasSetting(AltNewOverlay)">OverlayVisibility0</include>
            <include condition="Skin.HasSetting(AltNewOverlay)">AltOverlayVisibility0</include>
          </control>
        </itemlayout>
        <focusedlayout width="562" height="120">
          <control type="group">
            <animation effect="zoom" center="auto" start="100" end="122" time="600" tween="back" easing="out" reversible="false">Focus</animation>
            <control type="image">
              <posx>8</posx>
              <posy>8</posy>
              <width>548</width>
              <height>105</height>
              <aspectratio scalediffuse="false">stretch</aspectratio>
              <texture diffuse="thumbs/banner_wall_mask.png">common/black.png</texture>
            </control>
            <control type="label">
              <posx>272</posx>
              <posy>8</posy>
              <width>528</width>
              <height>105</height>
              <aligny>center</aligny>
              <align>center</align>
              <textcolor>white</textcolor>
              <label>$INFO[ListItem.Label]</label>
              <font>Font_Bold24</font>
            </control>
            <control type="image">
              <posx>8</posx>
              <posy>8</posy>
              <width>548</width>
              <height>105</height>
              <aspectratio scalediffuse="false">stretch</aspectratio>
              <texture background="true" diffuse="thumbs/banner_wall_mask.png">$VAR[BannerVar]</texture>
            </control>
            <control type="image">
              <posx>495</posx>
              <posy>8</posy>
              <width>60</width>
              <height>60</height>
              <include condition="!Skin.HasSetting(AltNewOverlay)">OverlayVisibility0</include>
              <include condition="Skin.HasSetting(AltNewOverlay)">AltOverlayVisibility0</include>
            </control>
            <control type="image">
              <posx>-3</posx>
              <posy>-3</posy>
              <width>568</width>
              <height>124</height>
              <aspectratio>stretch</aspectratio>
              <texture>thumbs/banner_shadow.png</texture>
            </control>
          </control>
        </focusedlayout>
      </control>
    </control>
  </include>
</includes>