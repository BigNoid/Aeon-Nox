<includes>
  <include name="ShowcaseInfoPaneMusic">
    <control type="group">
      <visible>Control.IsVisible(199)+!Control.HasFocus(110)+[[Skin.HasSetting(infopanelmusic)+[Container.Content(albums)|Container.Content(artists)]]|[!Skin.HasSetting(infopanellauncher)+Window.IsActive(1)+Substring(Container.FolderPath,advanced.launcher)]|Control.HasFocus(7000)|Player.HasVideo]</visible>
      <animation effect="slide" start="0,-945" end="0,0" time="550" easing="out" tween="cubic">VisibleChange</animation>
      <animation effect="slide" start="0,-945" end="0,0" time="550" delay="800" easing="out" tween="cubic">WindowOpen</animation>
      <animation effect="slide" start="0,0" end="0,-945" time="300" easing="out" tween="cubic">WindowClose</animation>
      <control type="group">
        <!-- info pane -->
        <posx>0</posx>
        <posy>100</posy>
        <animation effect="slide" start="0,0" end="0,-22" time="550" easing="out" tween="cubic" condition="Control.IsVisible(501)">Conditional</animation>
        <animation effect="fade" end="0" time="200">WindowClose</animation>
        <width>1920</width>
        <height>750</height>
        <control type="image">
          <posx>112</posx>
          <width>1695</width>
          <height>840</height>
          <texture>views/multiplex_back.png</texture>
          <include>Animation_CommonFade</include>
          <visible>!Skin.HasSetting(lightinfopanel)</visible>
        </control>
        <control type="image">
          <posx>112</posx>
          <width>1695</width>
          <height>815</height>
          <texture border="12">views/tablet_template.png</texture>
        </control>
        <control type="image">
          <posy>6</posy>
          <posx>112</posx>
          <width>1695</width>
          <height>692</height>
          <texture border="12">views/music_layout.png</texture>
        </control>
        <control type="image">
          <posx>154</posx>
          <posy>-27</posy>
          <width>240</width>
          <height>75</height>
          <aspectratio aligny="bottom">keep</aspectratio>
          <fadetime>400</fadetime>
          <texture background="true">$INFO[Skin.String(ArtistsLogosPath)]$INFO[ListItem.Artist,,/logo.png]</texture>
          <visible>!IsEmpty(Skin.String(ArtistsLogosPath))</visible>
          <visible>Container.Content(artists)|Container.Content(albums)</visible>
        </control>
        <include condition="Skin.HasSetting(effect_bg)">BG_Effect_Showcase_Panel</include>
        <control type="group">
          <!--fanart-->
          <posx>832</posx>
          <posy>40</posy>
          <control type="image">
            <posx>127</posx>
            <posy>15</posy>
            <width>776</width>
            <height>442</height>
            <aspectratio>scale</aspectratio>
            <fadetime>400</fadetime>
            <texture background="true" fallback="special://skin/backgrounds/fallback_music.jpg">$INFO[ListItem.property(fanart_image)]</texture>
            <bordertexture border="7">thumbs/thumbshadow.png</bordertexture>
            <bordersize>7</bordersize>
          </control>
          <control type="videowindow" id="2">
            <posx>135</posx>
            <posy>22</posy>
            <width>760</width>
            <height>428</height>
            <animation effect="fade" start="0" end="100" time="0" delay="1100">Visible</animation>
            <visible>Player.Hasvideo</visible>
          </control>
        </control>
        <control type="group">
          <posx>158</posx>
          <posy>65</posy>
          <control type="label">
            <posx>0</posx>
            <posy>-9</posy>
            <height>20</height>
            <width>600</width>
            <font>Font_Reg18</font>
            <textcolor>abFFFFFF</textcolor>
            <label>$VAR[MusicPanelDetailLabel1Var]</label>
          </control>
          <control type="label">
            <posx>0</posx>
            <posy>24</posy>
            <height>20</height>
            <width>735</width>
            <scroll>true</scroll>
            <font>Font_Reg18</font>
            <textcolor>white</textcolor>
            <label fallback="312577">$VAR[MusicPanelValueLabel1Var]</label>
          </control>
          <control type="label">
            <posx>0</posx>
            <posy>61</posy>
            <height>20</height>
            <width>420</width>
            <font>Font_Reg18</font>
            <textcolor>abFFFFFF</textcolor>
            <label>$VAR[MusicPanelDetailLabel2Var]</label>
          </control>
          <control type="label">
            <posx>0</posx>
            <posy>93</posy>
            <height>20</height>
            <width>735</width>
            <scroll>true</scroll>
            <font>Font_Reg18</font>
            <textcolor>white</textcolor>
            <label fallback="312577">$VAR[MusicPanelValueLabel2Var]</label>
          </control>
          <control type="label">
            <posx>0</posx>
            <posy>130</posy>
            <height>20</height>
            <width>420</width>
            <font>Font_Reg18</font>
            <textcolor>abFFFFFF</textcolor>
            <label>$VAR[MusicPanelDetailLabel3Var]</label>
          </control>
          <control type="label">
            <posx>0</posx>
            <posy>162</posy>
            <height>20</height>
            <width>735</width>
            <scroll>true</scroll>
            <font>Font_Reg18</font>
            <textcolor>white</textcolor>
            <label fallback="312577">$VAR[MusicPanelValueLabel3Var]</label>
          </control>
          <control type="textbox">
            <posx>0</posx>
            <posy>205</posy>
            <width>729</width>
            <height>220</height>
            <font>Font_Reg18</font>
            <align>justify</align>
            <label fallback="312577">$VAR[MusicPanelPlotVar]</label>
            <textcolor>white6</textcolor>
            <autoscroll delay="8000" time="2000" repeat="8000">Skin.HasSetting(AutoScroll)</autoscroll>
          </control>
        </control>
      </control>
    </control>
  </include>
</includes>