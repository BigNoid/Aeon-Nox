<window id="1116" type="dialog">
  <defaultcontrol always="true">5000</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <controls>
    <control type="group">
      <animation effect="slide" start="-729,0" end="0,0" time="400" easing="out" tween="quadratic">WindowOpen</animation>
      <animation effect="slide" start="0,0" end="-729,0" time="400" easing="out" tween="quadratic">WindowClose</animation>
      <control type="image">
        <description>Cover image</description>
        <posx>0</posx>
        <posy>0</posy>
        <width>729</width>
        <height>1080</height>
        <texture>info/movieinfogradient.png</texture>
        <aspectratio>stretch</aspectratio>
      </control>
      <control type="image">
        <description>Cover image</description>
        <posx>0</posx>
        <posy>0</posy>
        <width>729</width>
        <height>1080</height>
        <texture background="true">$INFO[ListItem.Icon]</texture>
        <include>Animation_VisibleChange200</include>
        <aspectratio>stretch</aspectratio>
      </control>
    </control>
    <control type="group">
      <animation effect="slide" start="1192,0" end="0,0" time="400" easing="out" tween="quadratic">WindowOpen</animation>
      <animation effect="slide" start="0,0" end="1192,0" time="400" easing="out" tween="quadratic">WindowClose</animation>
      <control type="image">
        <description>background image</description>
        <posx>729</posx>
        <posy>0</posy>
        <width>1192</width>
        <height>1080</height>
        <texture>info/info_rightpanelbottom.png</texture>
        <visible>IsEmpty(listitem.property(fanart_image))</visible>
      </control>
      <control type="image">
        <posx>729</posx>
        <posy>0</posy>
        <width>1192</width>
        <height>1080</height>
        <fadetime>500</fadetime>
        <aspectratio align="center">scale</aspectratio>
        <texture background="true" fallback="special://skin/backgrounds/programs.jpg">$INFO[listitem.property(fanart_image)]</texture>
      </control>
      <control type="image">
        <description>background image</description>
        <posx>729</posx>
        <posy>0</posy>
        <width>1192</width>
        <height>1080</height>
        <texture>info/info_rightpaneltop.png</texture>
      </control>
      <include condition="Skin.HasSetting(effect_bg)">BG_Effect_Home</include>
      <!-- Movie info -->
      <control type="group">
        <posx>825</posx>
        <posy>68</posy>
        <width>1042</width>
        <height>854</height>
        <control type="label">
          <description>Movie title</description>
          <posx>0</posx>
          <posy>16</posy>
          <width>1050</width>
          <font>Font_Reg38_Caps</font>
          <label>[UPPERCASE]$INFO[ListItem.Title][/UPPERCASE]</label>
          <scroll>true</scroll>
          <textcolor>FFececec</textcolor>
          <animation effect="slide" start="0,-38" end="0,-38" time="0" condition="true">Conditional</animation>
        </control>
        <control type="label">
          <description>Tagline</description>
          <posx>0</posx>
          <posy>45</posy>
          <width>1050</width>
          <font>Font_Reg20</font>
          <label>$INFO[ListItem.Studio,, • ]$INFO[ListItem.Premiered]</label>
          <scroll>true</scroll>
          <textcolor>FF868686</textcolor>
        </control>
        <control type="image">
          <posx>0</posx>
          <posy>90</posy>
          <width>660</width>
          <height>381</height>
          <fadetime>500</fadetime>
          <aspectratio align="center">scale</aspectratio>
          <texture background="true">$INFO[listitem.property(fanart_image)]</texture>
          <bordertexture border="10">thumbs/thumbshadow.png</bordertexture>
          <bordersize>10</bordersize>
        </control>
        <control type="textbox">
          <description>Plot</description>
          <posx>4</posx>
          <posy>530</posy>
          <width>945</width>
          <height>440</height>
          <align>justify</align>
          <font>Font_Reg18</font>
          <pagecontrol>60</pagecontrol>
          <label fallback="312577">$INFO[ListItem.Plot]</label>
          <autoscroll delay="15000" time="2000" repeat="10000">Skin.HasSetting(AutoScroll)+!Control.HasFocus(60)</autoscroll>
          <textcolor>FFececec</textcolor>
        </control>
      </control>
      <control type="spincontrol" id="60">
        <posx>1800</posx>
        <posy>573</posy>
        <visible>true</visible>
        <subtype>page</subtype>
        <font>-</font>
        <pulseonselect>no</pulseonselect>
        <onup>5000</onup>
        <onleft>50</onleft>
        <onright>5000</onright>
        <ondown>50</ondown>
        <showonepage>true</showonepage>
      </control>
      <control type="wraplist" id="5000">
        <description>wrap list</description>
        <posx>795</posx>
        <posy>548</posy>
        <width>1095</width>
        <height>44</height>
        <viewtype>list</viewtype>
        <orientation>horizontal</orientation>
        <onleft>5000</onleft>
        <onright>5000</onright>
        <onup>13</onup>
        <ondown>60</ondown>
        <scrolltime>200</scrolltime>
        <focusposition>2</focusposition>
        <itemlayout width="219" height="50">
          <control type="label">
            <posx>110</posx>
            <posy>0</posy>
            <width>216</width>
            <height>45</height>
            <align>center</align>
            <font>Font_Reg19</font>
            <info>ListItem.Label</info>
            <textcolor>FF868686</textcolor>
          </control>
        </itemlayout>
        <focusedlayout width="219" height="50">
          <control type="label">
            <posx>110</posx>
            <posy>0</posy>
            <width>216</width>
            <height>45</height>
            <align>center</align>
            <font>Font_Reg19</font>
            <label>$INFO[ListItem.Label]</label>
            <textcolor>FFececec</textcolor>
            <visible>Control.HasFocus(5000)</visible>
          </control>
          <control type="label">
            <posx>110</posx>
            <posy>0</posy>
            <width>216</width>
            <height>45</height>
            <align>center</align>
            <font>Font_Reg19</font>
            <label>$INFO[ListItem.Label]</label>
            <textcolor>FF868686</textcolor>
            <visible>!Control.HasFocus(5000)</visible>
          </control>
        </focusedlayout>
        <content>
          <item id="2">
            <description>Refresh</description>
            <label>$LOCALIZE[184]</label>
            <onclick>RunPlugin($INFO[ListItem.FileNameAndPath]/%%GET_INFO%%)</onclick>
          </item>
          <item id="6">
            <description>Get Thumb</description>
            <label>$LOCALIZE[13405]</label>
            <onclick>RunPlugin($INFO[ListItem.FileNameAndPath]/%%GET_THUMB%%)</onclick>
          </item>
          <item id="3">
            <description>Play/browse to Show</description>
            <label>$LOCALIZE[208]</label>
            <onclick>RunPlugin($INFO[ListItem.FileNameAndPath])</onclick>
          </item>
          <item id="7">
            <description>Get Fanart</description>
            <label>$LOCALIZE[20413]</label>
            <onclick>RunPlugin($INFO[ListItem.FileNameAndPath]/%%GET_FANART%%)</onclick>
          </item>
          <item id="5">
            <description>Play Trailer</description>
            <label>$LOCALIZE[20410]</label>
            <onclick>SendClick(2003,11)</onclick>
            <visible>!IsEmpty(ListItem.Trailer)+Container.Content(movies)</visible>
          </item>
        </content>
      </control>
    </control>
  </controls>
</window>