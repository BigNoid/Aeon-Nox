          <onright condition="IsEmpty(ListItem.Trailer)">9000</onright>
          <onup>52</onup>
          <ondown>52</ondown>
          <viewtype label="31477">list</viewtype>
          <preloaditems>2</preloaditems>
          <scrolltime tween="sine" easing="out">200</scrolltime>
          <itemlayout height="49">
            <control type="label">
              <posy>0</posy>
              <posx>68</posx>
              <width>100</width>
              <height>49</height>
              <font>Font_Condensed22</font>
